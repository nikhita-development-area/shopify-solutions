      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      },
      {
        "type": "text",
        "id": "link-id",
        "label": "Link Id",
        "default": "why-bye-bye-pigmentation"
      }
    ],
    "blocks": [
      {
        "type": "faq",
        "name": "Question-Answer",
        "settings": [
          {
            "type": "text",
            "id": "faq_question",
            "label": "Faq Question"
          },
          {
            "type": "text",
            "id": "faq_answer",
            "label": "Faq Answer"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Dynamic FAQ's"
      },
      {
        "name": "Dynamic FAQ's 2"
      }
    ]
  }
{% endschema %}

