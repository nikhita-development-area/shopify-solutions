{% comment %}
    Renders cart drawer

    Usage:
    {% render 'cart-drawer' %}
{% endcomment %}

<style>
  .drawer {
    visibility: hidden;
  }
</style>
{% comment %}Don't Delete This It is for Discount{% endcomment %}

{% assign discount = 0 %}
{% assign discount_code = '' %}
{% assign type = '' %}

{%- for item in cart.items -%}
  {% if item.properties['Plan'] == '4 Months' %}
    {% assign type = 'percentage' %}
    {% assign discount = 25 %}
    {% assign discount_code = 'result5Bulk' %}
     {% elsif item.properties['plans'] == '3 Months' %}
{% assign type = 'percentage' %}
    {% assign discount = 20 %}
    {% assign discount_code = 'bulk20 ' %}
     {% elsif item.properties['plans'] == '6 Months' %}
 {% assign type = 'percentage' %}
    {% assign discount = 30 %}
    {% assign discount_code = 'bulk30' %}
  {% elsif item.properties['Plan'] == '3 Months Female' or item.properties['Plan'] == '3 Months Plan' %}
    {% assign type = 'percentage' %}
    {% assign discount = 20 %}
    {% assign discount_code = 'result5' %}
  {% elsif item.properties['repeatCustomerOffer'] != blank and item.properties['discount_value'] != blank and item.properties['discount_type'] != blank %}
    {% if item.properties['discount_type'] == 'percentage' %}
 {% assign type = 'percentage' %} 
    {% elsif item.properties['discount_type'] == 'value' %}
      {% assign type = 'value' %}
    {% endif %}
    {% assign discount_code = item.properties['repeatCustomerOffer'] %}
    {% assign discount = item.properties['discount_value'] | plus:0 %}
  {% endif %}
{%- endfor -%}

{% comment %}End of Don't Delete This It is for Discount{% endcomment %}

<cart-drawer class="drawer{% if cart == empty %} is-empty{% endif %}" data-cart-count='{{ cart.item_count }}'>
  <div id="CartDrawer" class="cart-drawer">
    <div id="CartDrawer-Overlay"class="cart-drawer__overlay"></div>
    <div class="drawer__inner" role="dialog" aria-modal="true" aria-label="{{ 'sections.cart.title' | t }}" tabindex="-1">
       {%- if cart == empty -%}
        <div class="drawer__inner-empty">
          <div class="cart-drawer__warnings center{% if settings.cart_drawer_collection != blank %} cart-drawer__warnings--has-collection{% endif %}">
            <div class="cart-drawer__empty-content">
              <div class="cart-close py-3">
              <button class="drawer__close" type="button" onclick="this.closest('cart-drawer').close()" aria-label="{{ 'accessibility.close' | t }}">{% render 'icon-close' %}</button> 
                <p class="drawer__heading empty">{{ 'sections.cart.title' | t }}({{ cart.item_count }})</p> 
              </div>
    <p class="cart__empty-text">{{ 'sections.cart.empty' | t }}</p>
        {% comment %} <a href="{{ routes.all_products_collection_url }}" class="button">
                {{ 'general.continue_shopping' | t }}
            </a>
     {% endcomment %}
              {%- if shop.customer_accounts_enabled and customer == nil -%}
                <p class="cart__login-title h3">{{ 'sections.cart.login.title' | t }}</p>
                <p class="cart__login-paragraph">
                  {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
                </p>
              {%- endif -%}
            </div>
          </div>
          {%- if settings.cart_drawer_collection != blank -%}
            <div class="cart-drawer__collection">
              {% render 'card-collection',
                card_collection: settings.cart_drawer_collection,
                columns: 1
              %}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
      <div class="drawer__header py-3">
        <div class="d-flex">
          <button class="drawer__close" type="button" onclick="this.closest('cart-drawer').close()" aria-label="{{ 'accessibility.close' | t }}">{% render 'icon-close' %}</button>
          <p class="drawer__heading ">{{ 'sections.cart.title' | t }}({{ cart.item_count }})</p>
        </div>
      </div>
      <cart-drawer-items {% if cart == empty %}class=" is-empty"{% endif %} data-cart-count='{{ cart.item_count }}'>
        <form action="{{ routes.cart_url }}{% if discount > 0 %}?discount={{ discount_code }}{% endif %}" id="CartDrawer-Form" class="cart__contents cart-drawer__form" method="post">
          <div id="CartDrawer-CartItems" class="drawer__contents js-contents">
            {%- if cart != empty -%}
              <div class="drawer__cart-items-wrapper">
                <table class="cart-items" role="table">
                  <thead role="rowgroup" class="d-none">
                    <tr role="row">
                      <th id="CartDrawer-ColumnProductImage" role="columnheader"><span class="visually-hidden">{{ 'sections.cart.headings.image' | t }}</span></th>
                      {% comment %}}
                      <th id="CartDrawer-ColumnProduct" class="caption-with-letter-spacing" scope="col" role="columnheader">{{ 'sections.cart.headings.product' | t }}</th>
                      <th id="CartDrawer-ColumnTotal" class="right caption-with-letter-spacing" scope="col" role="columnheader">{{ 'sections.cart.headings.total' | t }}</th>
                      {% endcomment %}       
                      <th id="CartDrawer-ColumnQuantity" role="columnheader"><span class="visually-hidden">{{ 'sections.cart.headings.quantity' | t }}</span></th>
                    </tr>
                  </thead>

                  <tbody role="rowgroup">
                    {%- for item in cart.items -%}
                      <tr id="CartDrawer-Item-{{ item.index | plus: 1 }}" class="cart-item" role="row">
                        <td class="cart-item__media" role="cell" headers="CartDrawer-ColumnProductImage">
                                            <!-- tag -->
                      {% if item.properties['Plan'] == 'Dandruff' %}  
                        <!-- Dandruff Tag & Dosage on Cards Changes (Changed src URL) -->
                        <img width="80" height="20" src="https://cdn.shopify.com/s/files/1/0100/1622/7394/files/Frame_1000006450.png?v=1700215727">
                        <!-- Dandruff Tag & Dosage on Cards Changes (Changed src URL) -->
                      {% endif %}
                      <!-- tag -->
                          {% if item.image %}
                            {% comment %} Leave empty space due to a:empty CSS display: none rule {% endcomment %}
                            {% unless page.handle == "result4" or page.handle == "result-hinglish" or page.handle == "female-result" %}
                            <a href="{{ item.url }}" class="cart-item__link" tabindex="-1" aria-hidden="true"> </a>
                            {% endunless %}
                            <img class="cart-item__image"
                              src="{{ item.image | image_url: width: 300 }}"
                              alt="image"
                              title="image"
                              width="150"
                              height="{{ 150 | divided_by: item.image.aspect_ratio | ceil }}"
                            >
                          {% endif %}
                        </td>

                        <td class="cart-item__details" role="cell" headers="CartDrawer-ColumnProduct">
                          {%- if settings.show_vendor -%}
                            <p class="caption-with-letter-spacing light">{{ item.product.vendor }}</p>
                          {%- endif -%}

                          {% if page.handle == "result4" or page.handle == "result-hinglish" or page.handle == "female-result" %}
                          <h2 class="cart-item__name h4 break" style="text-decoration: none;">{{ item.product.title | escape }}</h2>
                          {% else %}
                          <a href="{{ item.url }}" class="cart-item__name h4 break">{{ item.product.title | escape }}</a>
                          {% endif %}

                        <div class="cart-item__price-wrapper 111">
                          {% unless page.handle == "result4" or page.handle == "result-hinglish" or page.handle == "female-result" %}
                         <quantity-input class="quantity">
                              <button class="quantity__button no-js-hidden" name="minus" type="button">
                                <span class="visually-hidden">{{ 'products.product.quantity.decrease' | t: product: item.product.title | escape }}</span>
                                {% render 'icon-minus' %}
                              </button>
                              <input class="quantity__input"
                                type="number"
                                name="updates[]"
                                value="{{ item.quantity }}"
                                min="0"
                                aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                id="Drawer-quantity-{{ item.index | plus: 1 }}"
                                data-index="{{ item.index | plus: 1 }}"
                              >
                              <button class="quantity__button no-js-hidden" name="plus" type="button">
                                <span class="visually-hidden">{{ 'products.product.quantity.increase' | t: product: item.product.title | escape }}</span>
                                {% render 'icon-plus' %}
                              </button>
                            </quantity-input>
                          {% endunless %}
                          {%- if item.product.has_only_default_variant == false or item.properties.size != 0 or item.selling_plan_allocation != nil -%}
                            <dl class="plan_text">
                              {%- if item.product.has_only_default_variant == false -%}
                                {%- for option in item.options_with_values -%}
                                  <div class="product-option">
                                    <dt>{{ option.name }}: </dt>
                                    <dd>{{ option.value }}{% unless forloop.last %}, {% endunless %}</dd>
                                  </div>
                                {%- endfor -%}
                              {%- endif -%}

                              {%- for property in item.properties -%}
                                {%- assign property_first_char = property.first | slice: 0 -%}
                                {%- if property.last != blank and property_first_char != '_' -%}
                                  <div class="product-option">
                                    <dt>{{ property.first }}: </dt>
                                    <dd>
                                      {%- if property.last contains '/uploads/' -%}
                                        <a href="{{ property.last }}" class="link" target="_blank" aria-describedby="a11y-new-window-message">
                                          {{ property.last | split: '/' | last }}
                                        </a>
                                      {%- else -%}
                                        {{ property.last }}
                                      {%- endif -%}
                                    </dd>
                                  </div>
                                {%- endif -%}
                              {%- endfor -%}
                            </dl>

                            <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                          {%- endif -%}

                          <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                            {%- for discount in item.discounts -%}
                              <li class="discounts__discount">
                                {%- render 'icon-discount' -%}
                                {{ discount.title }}
                              </li>
                            {%- endfor -%}
                          </ul>
                      <div class="cart-item__quantity my-2" role="cell" headers="CartDrawer-ColumnQuantity">
                          <div class="cart-item__quantity-wrapper">
                      {%- if item.original_line_price != item.final_line_price -%}
                              <div class="cart-item__discounted-prices">
                                <span class="visually-hidden">
                                  {{ 'products.product.price.regular_price' | t }}
                                </span>
                                <s class="cart-item__old-price price price--end">
                                  {{ item.original_line_price | money }}
                                </s>
                                <span class="visually-hidden">
                                  {{ 'products.product.price.sale_price' | t }}
                                </span>
                              
                              </div>
                            {%- else -%}
                              <span class="price price--end">
                                {{ item.original_line_price | money }}
                              </span>
                            {%- endif -%}
                            {% unless page.handle == "result4" or page.handle == "result-hinglish" or page.handle == "female-result" %}
                              <cart-remove-button id="CartDrawer-Remove-{{ item.index | plus: 1 }}" data-index="{{ item.index | plus: 1 }}">
                                <button class="button button--tertiary" aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}">
                                  {% render 'icon-remove' %}
                                </button>
                              </cart-remove-button>
                            {% endunless %}
                          </div>

                          <div id="CartDrawer-LineItemError-{{ item.index | plus: 1 }}" class="cart-item__error" role="alert">
                            <small class="cart-item__error-text"></small>
                            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-error" viewBox="0 0 13 13">
                              <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                              <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                              <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                              <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                            </svg>
                          </div>
                        </div>
                        </td>
                      </tr>
                    {%- endfor -%}
                  </tbody>
                </table>
              </div>
            {%- endif -%}
            <p id="CartDrawer-LiveRegionText" class="visually-hidden" role="status"></p>
            <p id="CartDrawer-LineItemStatus" class="visually-hidden" aria-hidden="true" role="status">{{ 'accessibility.loading' | t }}</p>
          </div>
          <div id="CartDrawer-CartErrors" role="alert"></div>
        </form>
      </cart-drawer-items>
      <div class="drawer__footer pt-3 pr-3">
        {%- if settings.show_cart_note -%}
          <details id="Details-CartDrawer">
            <summary>
              <span class="summary__title">
                {{ 'sections.cart.note' | t }}
                {% render 'icon-caret' %}
              </span>
            </summary>
            <cart-note class="cart__note field">
              <label class="visually-hidden" for="CartDrawer-Note">{{ 'sections.cart.note' | t }}</label>
              <textarea id="CartDrawer-Note" class="text-area text-area--resize-vertical field__input" name="note" placeholder="{{ 'sections.cart.note' | t }}">{{ cart.note }}</textarea>
            </cart-note>
          </details>
        {%- endif -%}

        <!-- Start blocks-->
        <!-- Subtotals-->

        <div class="cart-drawer__footer" {{ block.shopify_attributes }}>
          <div class="totals row align-items-center" role="status">
            <p class="totals__subtotal col-6 mb-0">{{ 'sections.cart.headings.total' | t }}</p>                
            <p class="totals__subtotal-value col-6 text-right ml-0">
            {% if discount > 0 %}
            {% if type == 'percentage' %}
                {% assign discounted_value = cart.total_price | times: discount | divided_by: 100 %}
                {{ cart.total_price | minus: discounted_value | money }}
                <del class="text-danger cut_price">{{ cart.total_price | money }}</del>
              {% elsif type == 'value' %}
                {% assign discounted_value = discount | plus:0 %}
                {{ cart.total_price | divided_by:100 | minus: discounted_value | times: 100 | money }}
              {% endif %}
            {% else %}
              {{ cart.total_price | money }}
            {% endif %}
            </p>
          </div>

          <div>
            {%- if cart.cart_level_discount_applications.size > 0 -%}
              <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                {%- for discount in cart.cart_level_discount_applications -%}
                  <li class="discounts__discount discounts__discount--end">
                    {%- render 'icon-discount' -%}
                    {{ discount.title }}
                    (-{{ discount.total_allocated_amount | money }})
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        </div>

        <!-- snap mint popup code -->
        {% if settings.show_snapmint and page.handle == 'result4' or page.handle == 'result-hinglish' or page.handle == 'female-result' or template contains 'index.login-lead' %}
          <div id="sm-widget-btn" class="snap_emi_txt_minicart snap_emi_txt_wrapper">
            <div class="snap-emi-inst" onclick="showSnapModal()">
                <span class="snap_emi_white_month_text first_line_snmpt">or <b>3 </b>Monthly Payments of</span>
                <span class="snap_dp_value"><span class="snap_rupee">₹</span><span id="dp" class="dp-class">2000</span></span>
                at <span class="snap_bold"> 0% EMI </span> on<img
                    src="https://assets.snapmint.com/assets/merchant/UPI_Logo_img.svg" class="snap_upi_widget_img"> <img
                    src="https://assets.snapmint.com/assets/merchant/buyonemi_traya.svg" class="snap_buy_now_btn">
            </div>
          </div>
        {% endif %}
        
        <!-- CTAs -->
        <div class="cart__ctas mt-4 mb-3" {{ block.shopify_attributes }}>
          <noscript>
            <button type="submit" class="cart__update-button button button--secondary" form="CartDrawer-Form">
              {{ 'sections.cart.update' | t }}
            </button>
          </noscript>

          <button type="submit" id="CartDrawer-Checkout" class="cart__checkout-button button" name="checkout" form="CartDrawer-Form"{% if cart == empty %} disabled{% endif %}>
            {% if settings.checkout_btn %}
            <span class="cart_checkout_text">{{ settings.checkout_btn }}</span>
            <span class="pay-opt-icon d-flex ml-2">
             <img src="https://cdn.gokwik.co/v4/images/upi-icons.svg" title="image" alt="image" height="100%" width="100%" loading="lazy">
             <img src="https://cdn.gokwik.co/v4/images/right-arrow.svg" class="ml-2" title="image" alt="image" height="100%" width="100%" loading="lazy">
            </span>
            {%else%}'Checkout'{%endif%}
          </button>

        </div>
        <div class="purchase_cart_text text-center mt-1 mb-1"><span>100% Purchase Protection</span></div>
        <div class="py-2">    
              {% comment %}<img src="//cdn.shopify.com/s/files/1/0100/1622/7394/files/iconss.png" class="invisible">{% endcomment %}
        </div>
      </div>
    </div>
  </div>
</cart-drawer>