{% assign faqvalues = article.metafields.custom.blog_faq.value %}
{% if faqvalues != blank %}
  <script defer type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {% for faq in faqvalues %}
          {
            "@type": "Question",
             "name": "{{ forloop.index }}. {{ faq | split: "->" | first }}",
             "acceptedAnswer": {
               "@type": "Answer",
               "text": "{{ faq | split: "->" | last }}"
              }
          }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]
    }
  </script>
{% endif %}
