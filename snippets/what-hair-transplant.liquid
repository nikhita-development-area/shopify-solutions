{% style %}
  .what-hair-transplant {
    padding: 55px 35px;
    width: calc(100% - 40%);
  }
  .transplant-text {
    font-size: 24px;
    line-height: 29px;
    color: #000;
  }
  .transplant-overview {
    width: 65%;
    font-size: 14px;
    line-height: 19px;
    color: #000;
    opacity: 0.8;
  }
  .stage__names {
    margin: auto;
    font-size: 11px;
    line-height: 15px;
    color: #000;
    opacity: 0.8;
  }
  .transplant-stages:after {
    content: '';
    position: absolute;
    bottom: -1.55rem;
    background-color: #72c5c080;
    width: 100%;
    height: 0.6px;
  }
  .right_opt {
    font-size: 15px;
    line-height: 20px;
    color: #000;
    font-weight: bold;
    width: 87%;
  }
  .right__steps {
    flex: 1 25%;
    width: 100%;
    flex-wrap: wrap;
  }
  .right_steps_img {
    width: 25%;
  }
  @media only screen and (max-width: 1024px) and (min-width: 768px) {
    .right_opt {
      font-size: 12px;
      line-height: 16px
    }
    .stage__images {
      width: 100px;
    }
  }
  @media only screen and (max-width: 767px) {
    .what-hair-transplant {
      padding: 40px 15px;
      margin: 0px 10px;
      width: calc(100% - 5%);
    }
    .transplant-text {
      font-size: 20px;
      line-height: 27px;
    }
    .transplant-overview {
      width: calc(100% - 10px);
      opacity: 0.9;
    }
    .transplant-stages {
      flex-wrap: wrap;
      row-gap: 30px;
    }
    .transplant-stages-main {
      width: 33.33%;
    }
    .stage__images {
      width: 100px;
    }
    .right_opt {
      font-weight: normal;
      font-size: 21px;
      line-height: 29px;
      min-width: 75%;
      width: unset;
    }
    .right__steps {
      margin: 20px auto 0px;
      row-gap: 15px;
    }
    .right_icon {
      width: 32px;
    }
    .right_steps_img {
      width: 100%;
      justify-content: center;
    }
    .transplant-step-1 {order: 1;}
    .transplant-step-3 {order: 2;}
    .transplant-step-2 {order: 3;}
    .transplant-step-4 {order: 4;}
  }
{% endstyle %}