<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="customer-story-individual">  
{% unless page.handle == 'spri-invoice-cancel' or page.handle == 'spri-reminder-cancel' or page.handle == 'best-hair-treatment-in-india' %}
  <div class="container breadcrumbs-container">   
{% render 'breadcrumbs' %}
  </div>
  {% endunless %}
  {% if page.handle == 'diagnosis-hindi' or page.handle == 'diagnosis-he' %}
  <div class="container breadcrumbs-container">   
    {% render 'breadcrumbs' %}
  </div>
  {% endif %}
</div>
{% if page.handle == 'spri-invoice-cancel' or page.handle == 'spri-reminder-cancel' %}
  <div class="page-width page-width--narrow section-{{ section.id }}-padding">{% comment %}<h1 class="d-none main-page-title page-title h0">{{ page.title | escape }}</h1>{% endcomment %}
    <div class="rte{% unless page.handle == 'spri-invoice-cancel' or page.handle == 'spri-reminder-cancel' %} mt-5{% endunless %} page-heading">{{ page.content }}</div>
  </div>
{% endif%}





{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
