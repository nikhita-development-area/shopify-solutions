<style>
  .referee-step h2 {font-size: 60px; line-height: 82px; letter-spacing: 0em;}
  .steps {display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px;}
  .step-first, .step-second, .step-third {background: #F6F6F6; box-shadow: 0px 4.113288402557373px 4.113288402557373px 0px #00000040; gap: 20px;}
  .step-first p, .step-second p, .step-third p {font-size: 16px; line-height: 22px;}
  .cta-btn a:hover {background: #b7d340; color: #fff; text-decoration: none;}
  
  @media screen and (max-width: 1024px) {
    .steps {grid-template-columns: repeat(2, 1fr);}
  }
  
  @media screen and (max-width: 767px) {
    .referee-step h2 {font-size: 30px; line-height: 41px;}
    .steps {grid-template-columns: repeat(1, 1fr); margin: 0 40px;}
    .cta-btn a {font-size: 12px;}
  }
</style>

