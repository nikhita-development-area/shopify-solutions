<!-- Sections -> hair-loss-slider.liquid -->

{% if template == 'index.login' %}
  {% assign page__hndl = 'home' %}
{% elsif template == 'index' %}
  {% assign page__hndl = 'home' %}
{% else %}
  {% assign page__hndl = page.handle %}
{% endif %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="hair-loss-causes">
  <div class="page-width custom-essential section-{{ section.id }}-padding" page_type="normal">
    <div class="collection__title title-wrapper title-wrapper--no-top-margin mb-0">
      <h2 class="section-title title h0 text-center">{{ section.settings.Heading }}</h2>
    </div>
  
    <div class="row essential_slid_grid1">
    {% for block in section.blocks %}
      <div class="essential_fe_img">
        <img src="{{ block.settings.Image | img_url: 'master' }}" alt="Slide">
      </div>
    {% endfor %}
    </div>
  </div>
</div>

<div class="text-center mt-4">
  <a id="hairtestctatreatment3" href="https://form.traya.health/female?cohort=1&location=reviews&page={{ page__hndl }}" class="btn btn-dark my-md-3 shadow hair-form-actn-link">Take The Hair Test <sup>TM</sup></a>
</div>
      
<style>
  .hair-loss-causes {background: #E8F5FF;}  
  .essential_fe_img {margin-left: 0; margin-right: 0; padding-left: 7px !important; padding-right: 7px !important; pointer-events: none;}
  
  @media screen and (max-width: 749px) {
    .custom-essential {padding-left: 15px !important; padding-right: 15px !important; margin-left: 15px !important; margin-right: 15px !important;}
    .custom-essential .essential_fe_img img {width: 100%;}
    .custom-essential .slick-list {margin: 10px;}
  }
  
  @media screen and (min-width: 750px) {
    .custom-essential ul.slick-dots {display: none;}    
    .custom-essential {padding-left: 0 !important; padding-right: 0 !important;}
  }
</style>
  
{% schema %}
  {
    "name": "Hair Loss Slider",
    "settings": [
      {
        "type": "text",
        "label": "Heading",
        "id": "Heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],  
    "blocks": [
      {
        "name": "Gallery",
        "type": "text",
        "settings": [
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "Image"
          }
        ]
      }        
    ],
    "presets": [{"name": "Hair Loss Slider"}]
  }
{% endschema %}