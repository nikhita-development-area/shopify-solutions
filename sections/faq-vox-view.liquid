 .main-faqbox .faqbox{
    background-repeat: no-repeat !important;
    object-fit: cover;
    margin: 0px 6px;
    position: relative;
    cursor:pointer;
  }
  .main-faqbox .faqbox-details{
    position:absolute;
    top:50%;
    left:50%; 
    text-align:center;
    transform: translateX(-50%) translateY(-50%);
    background: #F5F5F5;
    box-shadow: 6.22517px 6.22517px 9.33775px rgba(0, 0, 0, 0.25);
    width: 100%;
    max-width: 215px;
    border-radius: 9px 9px 9px 0;
  }
 .main-faqbox  .our-experts .doctors-section .doctor-img img {
    top: 0;
    left: 0;
    object-fit: cover;
  }
  .main-faqbox .our-experts .flex-fill h5 {
    font-size: 20px;
    letter-spacing: normal;
  }
  .main-faqbox .faqbox-details:before {
    content: "";
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    border: 1px solid #f5f5f5;
    border-radius: 9px 9px 9px 0;
    box-sizing: border-box;
    clip-path: polygon(0% 105%, 0% 0%, 105% 0%, 105% 105%, 43px 105%, 43px 80%, 21px 80%, 21px 105%);
  }
  .main-faqbox .faqbox .slick-slide img {
    display: block;
    margin: 0 auto;
}
.main-faqbox .faqbox-details:after {
  content: "";
  position: absolute;
  display: block;
  width: 25px;
  height: 20px;
  background: #f5f5f5;
  top: calc(100% - 1px);
  left: 0;
  box-sizing: border-box;
  clip-path: polygon(0 0, 0% 100%, 100% 0%, calc(100% - 25px) 0, 1px calc(100% - 2px), 1px 0);
}
.main-faqbox   .slick-slide img {
    display: block;
    margin: 0 auto;
}
