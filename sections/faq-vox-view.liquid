<div class="{% if template == 'index.login' %}login_space{% endif %} main-faqbox" page_type="normal">
<div class="our-experts stage-faq"> <!-- Stage 2 and Stage 3 Changes Added Class (stage-faq) -->
  <div class="container doctors-section">
     {% if template == 'index.login' %}
    <p class="login-heading">FAQ</p>
    {% else %}
    <div class="maintitle">
      <h2 class="text-center mb-4">{{ section.settings.title }}</h2>
      </div>
    {% endif %}
      <div class="row faq-boxview  mb-3">
        {%- for block in section.blocks -%}
          {% if block.settings.bgimage != blank %}
          <div class="faqbox" data-toggle="modal" data-target="#button-pop{{ forloop.index }}">
            <img src="{{ block.settings.bgimage | img_url:'' }}" class="w-100">
            <div class="faqbox-details">
              <div class="flex-fill tooltip">
                {% if block.settings.question != blank %}
                  <h6 class="font-weight-bold" data-toggle="modal">{{ block.settings.question }}</h6>
                {% endif %}
              </div>
            </div>
            <p class="readmore" >
              Read more
              <svg width="7" height="4" viewBox="0 0 7 4" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6.67607 2.16444C6.76689 2.07362 6.76689 1.92638 6.67607 1.83556L5.19608 0.355566C5.10526 0.264746 4.95801 0.264746 4.86719 0.355566C4.77637 0.446385 4.77637 0.593633 4.86719 0.684453L6.18274 2L4.86719 3.31555C4.77637 3.40637 4.77637 3.55361 4.86719 3.64443C4.95801 3.73525 5.10526 3.73525 5.19608 3.64443L6.67607 2.16444ZM0 2.23256H6.51163V1.76744H0V2.23256Z" fill="#414042"/>
              </svg>
            </p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{%- for block in section.blocks -%}
 <div class="modal fade" id="button-pop{{ forloop.index }}" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
           <h5 class="font-weight-bold">{{ block.settings.question }}</h5>
          <button type="button" class="close" data-dismiss="modal">X</button>
        </div>
        <div class="modal-body">
         <p>{{ block.settings.answer }}</p>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
</div>
<script>
  jQuery(document).ready(function($) {
      $('.faq-boxview').slick({
        dots: false,
        infinite: true,
        speed: 500,
        slidesToShow: 4,
        slidesToScroll: 1,
        // autoplay: true, // Stage 2 and Stage 3 Changes
        // autoplaySpeed: 3000, // Stage 2 and Stage 3 Changes
        autoplay: true,
        autoplaySpeed: 3000,
        arrows: true,
        responsive: [
            {
           breakpoint: 1080,
           settings: {
              centerMode: true,
              arrows: false,
              slidesToShow: 3,
              slidesToScroll: 1
           }
        },
          {
          breakpoint: 767,
          settings: {
            slidesToShow: 2,
            dots: false,
            slidesToScroll: 1
          }
        },
        {
           breakpoint: 543,
           settings: {
              centerMode: true,
              arrows: false,
              dots: false,
              slidesToShow: 1,
              slidesToScroll: 1
           }
        }
      ]
    });
});

</script>
{% schema %}
  {
    "name": "Faq box view",
    "settings": [
       {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
    ],
    "blocks": [
    {
      "type": "faq",
      "name": "faq",
      "settings": [
      
