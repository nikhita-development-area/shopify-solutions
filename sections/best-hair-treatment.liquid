<!-- section/best-hair-treatment -->
<div class="best-hair-treatment desktop container mb-0 pb-0 text-center">
    <h2 class="heading">{{ section.settings.main-head }}</h2>
  <div class="main-lft-rght-steps d-block d-md-flex align-items-center">
    <div class="lft-treat-steps">
      {% for block in section.blocks %}
        {% if block.type == 'left' %}
        <div class="head-des my-3 position-{{ forloop.index }} px-4 p-0">
          <h4 class="head mb-0">{{ block.settings.steps-head1 }}</h4>
          <p class="desc py-2">{{ block.settings.steps-desc1 }}</p>
        </div>
        {% endif %}
        {% endfor %}
    </div>
    <div class="Dr-img">
      {% assign width = section.settings.Dr-img.width | divided_by: 4 %}
      {% assign height = section.settings.Dr-img.height | divided_by: 4 %}
      {% assign alt = 'Image' %}
      {{ section.settings.Dr-img | image_url: width: width | image_tag: width: width, height: height, alt: alt, title: alt, loading: 'lazy', class: 'rounded w-100 h-100' }}            
    </div>
    <div class="rght-treat-steps">
      {% for block in section.blocks %}
        {% if block.type == 'right' %}
        <div class="head-des my-3 position-{{ forloop.index }} px-4 p-0">
          <h4 class="head mb-0">{{ block.settings.steps-head2 }}</h4>
          <p class="desc py-2">{{ block.settings.steps-desc2 }}</p>
        </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
   <div class="text-center mt-4 d-md-block d-none">
    <a id="hairtestctatreatment5" href="https://form.traya.health/female?cohort=1&location=reviews&page={{ page__hndl }}" class="btn btn-dark my-md-3 shadow hair-form-actn-link">Take The Hair Test <sup>TM</sup></a>
  </div>
</div>

<div class="best-hair-treatment mobile container mb-0 pb-0 text-center">
    <h2 class="heading">{{ section.settings.main-head }}</h2>
  <div class="main-lft-rght-steps d-block d-md-flex align-items-center">
    <div class="lft-treat-steps">
      {% for block in section.blocks %}
        {% if block.type == 'left' %}
        <div class="head-des my-3 position-{{ forloop.index }} px-4 p-0">
          <h4 class="head mb-0">{{ block.settings.steps-head1 }}</h4>
          <p class="desc py-2">{{ block.settings.steps-desc1 }}</p>
        </div>
        {% endif %}
        {% endfor %}
    </div>
    <div class="rght-treat-steps">
      {% for block in section.blocks %}
        {% if block.type == 'right' %}
        <div class="head-des my-3 position-{{ forloop.index }} px-4 p-0">
          <h4 class="head mb-0">{{ block.settings.steps-head2 }}</h4>
          <p class="desc py-2">{{ block.settings.steps-desc2 }}</p>
        </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "best-hair-treatment",
    "tag": "section",
    "class": "main-best-hair-treatment",
    "settings": [
      {
        "type": "image_picker",
        "id": "Dr-img",
        "label": "Drag your image"
      },
      {
        "type": "text",
        "id": "main-head",
        "label": "Enter your heading"
      }
    ],
    "blocks":[
      {
        "name" : "lft-treat-steps",
        "type":"left",
         "settings":[
          {
            "type": "text",
            "id": "steps-head1",
            "label": "Enter your heading"
          },
           {
            "type": "text",
            "id": "steps-desc1",
            "label": "Enter your description"
          }
         ]
      },
      {
        "name" : "rght-treat-steps",
        "type":"right",
         "settings":[
          {
            "type": "text",
            "id": "steps-head2",
            "label": "Enter your heading"
          },
           {
            "type": "text",
            "id": "steps-desc2",
            "label": "Enter your description"
          }
         ]
      }
    ],
    "presets":[
      {
        "name": "best-hair-treatment",
        "category": "custom"
      }
    ]
  }
{% endschema %}

<style>
  .best-hair-treatment.mobile{display:none}
  .best-hair-treatment.desktop{display:block}
  .best-hair-treatment .lft-treat-steps, .best-hair-treatment .Dr-img, .best-hair-treatment .rght-treat-steps{width:33.33%;}
  .best-hair-treatment .lft-treat-steps .head-des ,.best-hair-treatment .rght-treat-steps .head-des{width:80%;}
  .best-hair-treatment .position-1,.best-hair-treatment .position-3, .best-hair-treatment .position-5{float:right;}
  .best-hair-treatment .position-2 , .best-hair-treatment .position-4, .best-hair-treatment .position-6{float:left;}
  .main-lft-rght-steps .head-des .head{font-size:16px; font-weight: 800; letter-spacing: normal;}
  .main-lft-rght-steps .head-des .desc{font-size:14px; font-weight: 500;}
  .best-hair-treatment .Dr-img img{transform: scale(1.3);}
  .best-hair-treatment .heading{font-size: 32px; font-weight: 800; letter-spacing: normal;}
  .best-hair-treatment ul.slick-dots ,.best-hair-treatment .slick-dots li{margin:0;}
  .best-hair-treatment .slick-dots li button:before{font-size: 34px;}
  @media(max-width: 749px){
    .best-hair-treatment.mobile{display:block}
    .best-hair-treatment.desktop{display:none}
    .best-hair-treatment .Dr-img{display:none;}
    .best-hair-treatment .lft-treat-steps, .best-hair-treatment .Dr-img, .best-hair-treatment .rght-treat-steps{width:100%;}
    .best-hair-treatment .lft-treat-steps .head-des ,.best-hair-treatment .rght-treat-steps .head-des{width:100%; box-shadow: 0px 13px 13.399999618530273px -13px #00000040;}
    .best-hair-treatment .heading{font-size: 20px;}
    .best-hair-treatment .slick-dotted.slick-slider{margin-bottom: 0;}
  }
</style>
<script>
  $(document).ready(function(){
  if ($(window).width() <= 749) {
    $('.best-hair-treatment.mobile .main-lft-rght-steps').slick({
      dots: true,
      infinite: true,
      speed: 300,
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false
    });
  }  
});
</script>