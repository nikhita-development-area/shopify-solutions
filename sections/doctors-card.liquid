<div class="our-experts">
  <div class="container doctors-section">
      <p class="font-weight-bold text-center mb-md-4 pt-0 pt-md-4 section-title px-4 px-md-auto{% if page.handle == 'result-f' %} cstm_section_titleFR{% endif %}">{{ section.settings.sectionTitle }}</p>

      <div class="row row {% if page.handle == 'result-f' %} female-doctor-slider {% else %} doctor_sliderFcombo {% endif %}">
       {% for block in section.blocks %}
          <div class="col-12 col-md-6 mb-0 mb-md-5 scs-story_desc">
              <div class="card border rounded-lg shadow p-3 p-md-4 mb-0 h-100 d-flex flex-column cstm_doctor_cartFS">
                  <p class="text-center px-3 pb-4  pb-4 m-auto font-weight-bold female-combo-doctor-card addReadMore showlesscontent">
                    “{{ block.settings.paratext }}”
                  </p>
                  <div class="col-5 col-lg-5 px-0 mx-auto mb-4">
                      <div class="doctor-img position-relative rounded-circle">
                          <img src="{{ block.settings.doctorImage | img_url: 'compact' }}"
                              alt="{{ block.settings.doctorName }}" class="">
                      </div>
                  </div>
                  <div class="flex-fill">
                      <h5 class="font-weight-bold text-center text-white">{{ block.settings.doctorName }}</h5>
                      <h5 class="text-center text-white">{{ block.settings.specialist }}</h5>
                  </div>
              </div>
          </div>
        {% endfor %}
      </div>
  </div>
</div>

{% schema %}
  {
    "name": "Doctors Card",
    "settings": [
                {
            "type": "text",
            "id": "sectionTitle",
            "label": "Section Title"
          }
    ],
    "blocks": [
     {
       "name": "Doctor",
       "type": "text",
       "settings": [
          {
            "type": "text",
            "id": "doctorName",
            "label": "Name"
          },
          {
            "type":"image_picker",
            "label" :"Doctor Image",
            "id" :"doctorImage"
         },
           {
            "type": "text",
            "id": "specialist",
            "label": "Doctor Specialist"
          },
          {
            "type": "text",
            "id": "paratext",
            "label": "Content"
          }                
        
       ]
}    ],
          "presets": [
    {
      "name": "Doctors Card"
    }
  ]
  }
{% endschema %}
<style>
  .our-experts .cstm_doctor_cartFS{
background: linear-gradient(to bottom, #FFF 0%, #FFF 60%, #555555 40%, #555555 100%);
}
</style>