     .best_expert{
         font-size:12px;
    }
     .best_expert_heading h1{
         font-size:20px;
    }
     .hair1{
         top: 80%;
        left: 1%;
        transform: translate(0%, 0%);
    }
     .hair2{
         top: 88%;
         left:4%;
         transform: translate(0%, 0%);
    }
     .hair3{
         top: 94%;
         left:10%;
    }
     .doctor_text{
         font-size:10px;
         padding:0px;
    }
}
 </style>