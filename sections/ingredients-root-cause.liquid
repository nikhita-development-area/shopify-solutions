{% if template == 'index' %}
  {% assign page__hndl = 'home' %}
{% else %}
  {% assign page__hndl = page.handle %}
{% endif %}

<div class="mycontainer mt-5" id="shopify-section-rootcause-ingredient">
  <p class="section-title">{{ section.settings.section_title }}</p>
  <p class="section-sub-title">{{ section.settings.section_sub_title }}</p>

  <div class="row justify-content-around root-causes-ngredients">
    <div class="d-md-none col-10 rootcauseMob_Slide my-4 px-0">
      {% for block in section.blocks %}
        <p
          class="m-2 my-0 text-center font-fredoka p-1 rootcauseMob rootcauseMob-{{ forloop.index }}"
          id="{{ block.settings.rootID }}"
        >
          {% if block.settings.roottext == 'Lack of Sleep' -%}
            {{- 'Sleep' -}}
          {%- else -%}
            {{- block.settings.roottext -}}
          {%- endif %}
        </p>
      {% endfor %}
    </div>

    <div class="col-10 col-md-3 card m-2 p-3 d-none d-md-block">
      <div class="d-flex justify-content-center mt-2 mb-5">
        <p class="card-text px-3 py-1">Root Causes</p>
      </div>
      <div class="root-point-main">
        {% for block in section.blocks %}
          <div
            class="d-flex justify-content-between align-items-center my-3 {{ block.settings.roottext }} position-relative rootcauseMob rootcauseMob-{{ forloop.index }}"
            id="{{ block.settings.rootID }}"
          >
            <p class="m-0 ml-md-5">{{ forloop.index }}. {{ block.settings.roottext }}</p>
            <div class="root-points root-points-{{ forloop.index }}"> </div>
          </div>
        {% endfor %}
      </div>
<!--         <div><img src="https://cdn.shopify.com/s/files/1/0100/1622/7394/files/lines.svg?v=1669892192"></div> -->
    </div>

    {% for block in section.blocks %}
      
      <div class="d-md-none col-10" style="background: #F7F9EF; border-radius: 10px;">
      <div
        class="impactcard impfirst impactcard-{{ forloop.index }}"
        style="border-bottom: 0.5px dashed rgba(63, 63, 63, 0.51);"
        data-target="{{ block.settings.rootID }}"
      >
        <div class="d-flex mt-2 justify-content-end">
          <p class="card-text px-2 py-1"">Impact</p>
        </div>
      <div class="row align-items-center my-2">
        <div class="col-4 pb-4">
          <div class="root-cause-border rounded-circle p-2 mt-md-4 mt-3 mx-auto">
            <img
              class="rounded-circle m-3 m-auto p-1 mobileIMG"
              alt="{{ block.settings.roottext }}"
              src="{{ block.settings.root_img | img_url: '100x' }}"
              width="100"
            >
          </div>
        </div>
        <div class="col-8">
          <p class="text-left rootpara">{{ block.settings.rootpara }}</p>
        </div>
      </div>
      </div>

      <div
        class="impactcard impactcard-{{ forloop.index }}"
        data-target="{{ block.settings.rootID }}"
      >
        <div class="d-flex mt-2 justify-content-end">
          <p class="card-text px-2 py-1">How we target</p>
        </div>
      <div class="row align-items-center my-2 pb-3">
        <div class="col-4">
               <p class="fw-bold text-center text-black font-fredoka fs-10">{{ block.settings.ingredientstext }}</p>
           <div class="root-cause-border rounded-circle p-2 mt-md-4 mt-3 mx-auto">
            <img
              class="rounded-circle m-3 m-auto p-1 mobileIMG"
              alt="{{ block.settings.roottext }}"
              src="{{ block.settings.ingredients_img | img_url: '100x' }}"
              width="100"
            >
          </div>
        </div>
        <div class="col-8">
          <p class="text-left rootpara text-black">{{ block.settings.ingredientspara }}</p>
        </div>
      </div>
      </div>
      </div>




    
      <div
        class="col-10 col-md-3 card m-2 py-3 px-0 impactcard deskCard impfirst impactcard-{{ forloop.index }}"
        data-target="{{ block.settings.rootID }}"
      >
        <div class="d-flex justify-content-md-center mt-2 mb-md-5 mb-2 ml-md-0 ml-3">
          <p class="card-text px-3 py-1">Impact</p>
        </div>
        <div class="root-cause-content position-relative">
          <div class="root-cause-border rounded-circle p-3 mt-md-4 mt-3 mx-auto">
            <img
              class="rounded-circle m-3 m-auto p-3"
              alt="{{ block.settings.roottext }}"
              src="{{ block.settings.root_img | img_url: '100x' }}"
              width="100"
            >
          </div>
        </div>
        <div class="p-3">
          <p class="text-center rootpara position-relative">{{ block.settings.rootpara }}</p>
        </div>
      </div>

      <div
        class="col-10 col-md-3 card m-2 py-3 px-0 impactcard deskCard impactcard-{{ forloop.index }}"
        data-target="{{ block.settings.rootID }}"
      >
        <div class="d-flex justify-content-md-center mt-2 mb-md-5 mb-2 ml-md-0 ml-3">
          <p class="card-text px-2 py-1">How we target</p>
        </div>
        <div class="root-cause-content position-relative">
          <div class="root-cause-border rounded-circle p-3 mt-md-4 mt-3 mx-auto">
            <img
              class="rounded-circle m-3 m-auto p-3"
              alt="{{ block.settings.roottext }}"
              src="{{ block.settings.ingredients_img | img_url: '100x' }}"
              width="100"
            >
          </div>
        </div>
        <div class="p-3">
          <p class="fw-bold text-center text-black font-fredoka fs-16">{{ block.settings.ingredientstext }}</p>
          <p class="text-center text-black">{{ block.settings.ingredientspara }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="text-center mt-md-5 mt-3">
    <a
      id="{% if page.handle == 'femalev1' %}femalev1-hair-test-button3{% else %}hairtestcta{% endif %}"
      href="https://form.traya.health/female?cohort=1&location=HomeSlideshow&page={{ page__hndl }}"
      class="start-journey-btn btn btn-dark mt-3 shadow hair-form-actn-link btn-hair-test f-hair-test-btn position-relative"
      >Take The Hair Test <sup>&trade;</sup></a
    >
  </div>
</div>

{% schema %}
 {
   "name": "Root-Causes Ingredients",
   "settings": [
     {
       "id":"section_title",
       "label":"Section Title",
       "type": "text"
     },
     {
       "id":"section_sub_title",
       "label":"Section Sub Title",
       "type": "text"
     }
   ],
   "blocks": [
    {
      "name": "impact",
      "type": "text",
      "settings": [
        {
           "type": "text",
           "id": "rootID",
           "label": "Root-Causes Ingredients ID"
         },
         {
           "type": "text",
           "id": "roottext",
           "label": "Root Cause Name"
         },
         {
           "type": "text",
           "id": "rootpara",
           "label": "Root Cause Content"
         },
          {
           "type": "image_picker",
           "id": "root_img",
           "label": "Root Cause Image"
         },
        {
           "type": "text",
           "id": "ingredientstext",
           "label": "Ingredients Name"
         },
         {
           "type": "text",
           "id": "ingredientspara",
           "label": "Ingredients Content"
         },
          {
           "type": "image_picker",
           "id": "ingredients_img",
           "label": "Ingredients Image"
         }
      ]
   }
  ],
  "presets": [
    {
      "name": "Ingredients Root Cause"
    }
  ]
 }
{% endschema %}

