 @media only screen and (max-width: 767.98px) {
     .template-page.femalev1 .section-sub-title{
         font-weight: 400;
         font-size: 14px;
         line-height: 20px;
    }
     .rootcauseMob_Slide .slick-next:before, .rootcauseMob_Slide .slick-prev:before{
         width:9px;
         height:9px;
    }
     .rootcauseMob_Slide .rootcauseMob{
         font-size: 16px;
         line-height: 26px;
         font-weight: normal;
    }
     .rootcauseMob.activerootcause{
         background: #B4C96C;
         border: 0.511617px solid #B4CA6C;
         box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.25);
         border-radius: 4.60456px;
         font-weight: 900 !important;
         transform: scale(1.1);
    }
     .rootcauseMob{
         background: #FFFFFF;
         border: 0.511617px solid #B4C96C;
         border-radius: 4.60456px;
    }
     .rootcauseMob p{
         font-weight: 700;
         font-size: 10px;
         line-height: 14px;
         text-align: center;
         color: #000000;
    }
     .rootcauseMob_Slide .slick-list .slick-track{
         display: flex;
         align-items: center;
    }
     .root-cause-content:before {
         content: " ";
         width: 1px;
         height: 52%;
         top: -52%;
         left: 50%;
         display: block;
         position: absolute;
         background: #C2D758;
    }
     .root-cause-content:after {
         content: " ";
         width: 1px;
         height: 10%;
         bottom: -10% !important;
         left: 50%;
         display: block;
         position: absolute;
         background: #C2D758;
    }
     .impfirst:after {
         content: '';
         position: absolute;
         background: #C2D758;
         width: 1px;
         height: 7%;
         left: 17%;
         bottom: 0;
    }
     .impfirst:before {
         content: '';
         position: absolute;
         background: #C2D758;
         width: 1px;
         height: 17%;
         left: 17%;
         top: 0;
    }
     .rootcauseMob_Slide:not(.slick-initialized) > .rootcauseMob:first-of-type ~ * {
         display: none;
    }
     .root-causes-ngredients .slick-prev {
         left: -10px;
         z-index: 5;
    }
     .root-causes-ngredients .slick-list {
         height: 55px;
    }
     .rootpara{
         font-size:11px;
         height: 105px;
         text-align: center;
         display: flex;
         align-items: center;
    }
     .fs-10{
