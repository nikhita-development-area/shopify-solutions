<div class="container">
  {% if section.settings.title != '' %}
    <p class="section-title pt-0 mt-md-2 section-title all-product">{{ section.settings.title }}</p>
  {% endif %}
  <div class="row regrowth-slider">
    {% for block in section.blocks %}
      <div class="col-12 col-md-4">
        <div class="regrowth-journey" style="background: {{ block.settings.bk-color }};">
          {% if block.settings.heading != blank %}<p class="journey-text-1 font-weight-bold">{{ block.settings.heading }}</p>{% endif %}
          {% if block.settings.content != blank %}<p class="journey-text-2">{{ block.settings.content }}</p>{% endif %}
          <ul class="regrowth-list">
            {% if block.settings.step1 != blank %}<li class="regrowth-lists">{{ block.settings.step1 }}</li>{% endif %}
            {% if block.settings.step2 != blank %}<li class="regrowth-lists">{{ block.settings.step2 }}</li>{% endif %}
            {% if block.settings.step3 != blank %}<li class="regrowth-lists">{{ block.settings.step3 }}</li>{% endif %}
            {% if block.settings.step4 != blank %}<li class="regrowth-lists">{{ block.settings.step4 }}</li>{% endif %}
            {% if block.settings.step5 != blank %}<li class="regrowth-lists">{{ block.settings.step5 }}</li>{% endif %}
          </ul>
          {% if block.settings.step-image != blank %}
              <img class="lazyload regrowth-image" data-src="{{ block.settings.step-image | img_url: ' ' }}">
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  {% if section.settings.btn_text != blank and section.settings.btn_link != blank %}
  <a id="homepage" href="{{ section.settings.btn_link }}" class="start-journey-btn btn btn-dark take-the-hair-test mt-3 shadow hair-form-actn-link">{{ section.settings.btn_text }}</a>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Hair Regrowth Journey",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      }
    ],
    "blocks": [
      {
        "name": "regrowth blocks",
        "type": "text",
        "settings": [
          {
            "type": "color",
            "id": "bk-color",
            "label": "Select Background Color",
            "default": "transparent"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "image_picker",
            "id": "step-image",
            "label": "select image"
          },
          {
            "type": "text",
            "id": "step1",
            "label": "step1"
          },
          {
            "type": "text",
            "id": "step2",
            "label": "step2"
          },
          {
            "type": "text",
            "id": "step3",
            "label": "step3"
          },
          {
            "type": "text",
            "id": "step4",
            "label": "step4"
          },
          {
            "type": "text",
            "id": "step5",
            "label": "step5"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hair Regrowth Journey",
        "category": "custom"
      }
    ]
  }
{% endschema %}

{% style %}
  .regrowth-journey {
    min-height: 365px;
    position: relative;
    padding: 30px 20px;
    margin-bottom: 30px;
    border-radius: 9px;
  }
  .journey-text-1 {
    font-size: 21px;
  }
  .journey-text-2 {
    font-size: 43.3px;
    font-weight: 200;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.07;
    letter-spacing: -.22px;
    text-align: left;
    color: #414042;
    margin-top: 15px;
  }
  .regrowth-list {
    padding-left: inherit;
  }
  .template-page.all-products li {
    list-style: inherit;
  }
  .regrowth-lists {
    font-size: 15px;
    font-weight: 400;
    font-stretch: normal;
    font-style: normal;
    line-height: 2.27;
    letter-spacing: -.15px;
    text-align: left;
  }
  ul.regrowth-list li+li {
    border-top: 1px solid #bcbec0;
  }
  .regrowth-image {
    position: absolute;
    right: 15px;
    bottom: 15px;
  }
  @media only screen and (max-width: 991.98px) and (min-width: 768px) {
    .journey-text-1 {
      font-size: 18px;
    }
    .journey-text-2 {
      font-size: 30.3px;
      margin-top: 0px;
    }
    .regrowth-lists {
      font-size: 13px;
      line-height: 1.8;
    }
    .regrowth-image {
      bottom: 8px;
    }
  }
{% endstyle %}