<div class="ht_section ht_banner_one">
  <div class="blog-banner-one">
    <div class="blog-content">
      <div class="heading_banner">
        {% if section.settings.heading != blank %}
          <a href="https://form.traya.health/questions?cohort=1&location=card1&page={{ request.path | replace: "/", "_" | replace: '_blogs_', 'blogs_' }}&utm_campaign=blogs_ht_card1" id="htcard1">
            <h1>{{ section.settings.heading }}</h1>
          </a>
        {% endif %}
      </div>
      <div class="paragraph_banner">
        {% if section.settings.paragraph != blank %}
          <a href="https://form.traya.health/questions?cohort=1&location=card1&page={{ request.path | replace: "/", "_" | replace: '_blogs_', 'blogs_' }}&utm_campaign=blogs_ht_card1" id="htcard1">
            <p>{{ section.settings.paragraph }}</p>
          </a>
        {% endif %}
      </div>
      <div class="banner_one_btn">
        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_url }}&page={{ request.path | replace: '/blogs/', 'blogs_' | replace: '/', '_' }}&utm_campaign=blogs_ht_card1"
            class="btn" id="htcard1"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
    <div class="blog-images">
      {% if section.settings.desktop_image != blank %}
        <a href="https://form.traya.health/questions?cohort=1&location=card1&page={{ request.path | replace: "/", "_" | replace: '_blogs_', 'blogs_' }}&utm_campaign=blogs_ht_card1" id="htcard1">
          <img
            src="{{ section.settings.desktop_image | image_url }}"
            alt="Desktop Image"
            class="desktop-image"
            width=""
            height=""
          >
        </a>
      {% endif %}

      {% if section.settings.mobile_image != blank %}
        <a href="https://form.traya.health/questions?cohort=1&location=card1&page={{ request.path | replace: "/", "_" | replace: '_blogs_', 'blogs_' }}&utm_campaign=blogs_ht_card1" id="htcard1">
          <img
            src="{{ section.settings.mobile_image | image_url }}"
            alt="Mobile Image"
            class="mobile-image"
            width=""
            height=""
          >
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .blog-banner-one {
       display: flex;
       flex-direction: column;
       text-align: center;
       border: 1px solid var(--Devider-DEvider, rgba(224, 224, 224, 1));
       background: var(--Surface-Secondary, rgba(241, 241, 241, 1));
  }
   .blog-content {
       order: 2;
       padding:16px;
  }
   #form_link {
       text-decoration:none;
       color: #414042;
       height:100%;
  }
   .blog-images {
       order: 1;
       display: flex;
       flex-direction: column;
       align-items: center;
       width:100%;
  }
   .blog-images img {
       max-width: 100%;
       height: 100%;
       object-fit: cover;
  }
   .mobile-image {
       width:100%;
      margin-top:40px;
  }
   .banner_one_btn{
       padding-top:24px;
  }
   .banner_one_btn .btn {
       display: inline-block;
       padding: 12px 20px;
       background: rgba(65, 64, 66, 1);
       color: #fff;
       text-decoration: none;
       border-radius: 8px;
       margin-top: 10px;
       width:100%;
       font-family: Nunito Sans;
       font-size: 18px;
       font-weight: 700;
       line-height: 23.4px;
       text-align: center;
  }
   .desktop-image {
       display: none;
  }
   .paragraph_banner p {
       font-family: "Nunito Sans" !important;
       font-size: 23px;
       font-weight: 600;
       line-height: 30.55px;
       letter-spacing: 0.01em;
       text-align: center;
  }
   .heading_banner h1 {
       display:none;
  }
   .mobile-image {
       display: block;
  }
   @media (min-width: 768px) {
       .blog-banner-one {
           flex-direction: row;
           justify-content: space-between;
           text-align: left;
           background: linear-gradient(92.38deg, #D4D4D4 0.18%, #FFFFFF 101.95%);
      }
       .blog-content, .blog-images {
           order: unset;
      }
       .blog-content {
           padding:20px;
      }
       .blog-images {
           flex-direction: row;
      }
       .blog-images {
           width:unset;
          align-items: end;
      }
       .mobile-image {
           display: none;
      }
       .desktop-image {
           display: block;
      }
       .heading_banner h1 {
           font-family: Fredoka;
           font-size: 32px;
           font-weight: 600;
           line-height: 41.6px;
           text-align: left;
           display:block;
      }
       .paragraph_banner {
           text-align: left;
      }
       .paragraph_banner p {
           text-align: left;

      }
    .banner_one_btn .btn {
        width: 54%;
        font-family: "Nunito Sans";
        font-size: 22px;
        font-weight: 700;
        line-height: 28.6px;
        text-align: center;
      }
  }
</style>
{%- style -%}
  .ht_banner_one {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .ht_banner_one  {
    padding-top: 0;
     padding-bottom:0;
  }
  @media screen and (min-width: 750px) {
    .ht_banner_one {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Blog Banner One",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "FIND THE ROOT CAUSE"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets":[
    {"name":"Blog Banner First"}
  ]

}
{% endschema %}
