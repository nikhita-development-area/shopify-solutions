<div class="container section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <div class="text-center pb-3"><p class="embrace_heading">{{ section.settings.heading }}</p></div>
  {% endif %}
  <div class="d-flex align-items-center flex-wrap embrace_journey">
    {%- for block in section.blocks -%}
      <div class="journey_main d-flex flex-wrap align-items-center">
      {%- if block.settings.journey_image != blank -%}
        <div class="col-12 text-center pb-2 journey_image{% if block.settings.partitioner == true %} partitioner{% endif %}">
          {{ block.settings.journey_image | image_url: width: 200 | image_tag: alt: block.settings.journey_image.alt, title: block.settings.journey_image.alt, loading: 'eager', width: '140', height: '140', class: 'joruney__image m-auto' }}
        </div>
      {%- endif -%}
      {%- if block.settings.step != blank -%}
        <div class="col-12 text-center"><p class="m-0 pb-1 font-weight-bold l-0 step_name">{{ block.settings.step }}</p></div>
      {%- endif -%}
      {%- if block.settings.duration != blank -%}
        <div class="col-12 text-center px-md-2 px-0"><p class="m-0 pb-1 duration">{{ block.settings.duration }}</p></div>
      {%- endif -%}
      {%- if block.settings.btn != blank -%}
        <div class="col-12 text-center find_btn" id="popup{{ forloop.index }}"><p class="m-0 p-md-2 p-1 find_more_btn font-weight-bold">{{ block.settings.btn }}</p></div> <!-- Science Page Changes Added (id="popup{{ forloop.index }}") & (find_btn) -->
      {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
  {
    "name": "Embrace Your Journey",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Enter Heading",
        "info":"Heading"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 0
      }
    ],
    "blocks": [
      {
        "name": "Your Journey",
        "type": "Journey",
        "settings": [
          {
            "type": "image_picker",
            "id": "journey_image",
            "label": "Select Image",
            "info": "Image"
          },
          {
            "type": "text",
            "id": "step",
            "label": "Enter Step Name",
            "info": "Step Name"
          },
          {
            "type": "text",
            "id": "duration",
            "label": "Enter Duration",
            "info": "Duration"
          },
          {
            "type": "text",
            "id": "btn",
            "label": "Enter Button Text",
            "info": "Button Text"
          },
          {
            "type": "checkbox",
            "id": "partitioner",
            "label": "Show Partitioner",
            "info": "Show/Hide Partitioner",
            "default": false
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Embrace Your Journey"
      }
    ]
  }
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  #shopify-section-{{ section.id }} .embrace_heading {font-size: 48px;line-height: 65.47px;font-weight: 800;}
  #shopify-section-{{ section.id }} .journey_image {position: relative;}
  #shopify-section-{{ section.id }} .journey_main {width: 20%;}
  #shopify-section-{{ section.id }} .step_name {color: #BE6C5D;font-size: 24px;line-height: 30.1px;}
  #shopify-section-{{ section.id }} .duration {color: #414042;font-size: 16px;line-height: 20.06px;font-weight: 300;}
  #shopify-section-{{ section.id }} .find_more_btn {font-size: 16px;line-height: 20.06px;color: #fff;background: #C4695B;border-radius: 25px;}
  #shopify-section-{{ section.id }} .partitioner:after {content: '';position: absolute;top: 50%;right: -15%;transform: translate(12%, -50%);background: #DB8878;height: 4px;width: 40%;}
  #shopify-section-{{ section.id }} .partitioner:before {content: '';position: absolute;left: -15%;top: 50%;transform: translate(-12%, -50%);height: 4px;background: #DB8878;width: 40%;}
  .embrace_journey:not(.slick-initialized) > .journey_main:first-of-type ~* {display: none !important;}
  @media only screen and (max-width: 1199.98px) and (min-width: 992px) {
    #shopify-section-{{ section.id }} .joruney__image {width: 100%;height: 100%;}
    #shopify-section-{{ section.id }} .partitioner:before {width: 20%;transform: translate(20%, -50%);}
    #shopify-section-{{ section.id }} .partitioner:after {width: 20%;transform: translate(-20%, -50%);}
    #shopify-section-{{ section.id }} .embrace_heading {font-size: 42px;line-height: 54.47px;}
    #shopify-section-{{ section.id }} .step_name {font-size: 22px;line-height: 25.1px;}
    #shopify-section-{{ section.id }} .duration {font-size: 14px;line-height: 22.06px;}
    #shopify-section-{{ section.id }} .find_more_btn {font-size: 15px;line-height: 22.06px;}
  }
  @media only screen and (max-width: 991.98px) and (min-width: 768px) {
    #shopify-section-{{ section.id }} .joruney__image {width: 100%;height: 100%;}
    #shopify-section-{{ section.id }} .partitioner:before {width: 26%;transform: translate(6%, -50%);}
    #shopify-section-{{ section.id }} .partitioner:after {width: 26%;transform: translate(-6%, -50%);}
    #shopify-section-{{ section.id }} .embrace_heading {font-size: 38px;line-height: 45.47px;}
    #shopify-section-{{ section.id }} .step_name {font-size: 20px;line-height: 26.1px;}
    #shopify-section-{{ section.id }} .duration {font-size: 12px;line-height: 18.06px;}
    #shopify-section-{{ section.id }} .find_more_btn {font-size: 13px;line-height: 18.06px;}
  }
  @media only screen and (max-width: 767.98px) {
    #shopify-section-{{ section.id }} .embrace_heading {font-size: 20px;line-height: 27.28px;}
    #shopify-section-{{ section.id }} .journey_main {width: 33.33%;}
    #shopify-section-{{ section.id }} .step_name {font-size: 14px;line-height: 17.56px;}
    #shopify-section-{{ section.id }} .duration {font-size: 10px;line-height: 12.54px;}
    #shopify-section-{{ section.id }} .find_more_btn {font-size: 10.32px;line-height: 12.94px;}
    #shopify-section-{{ section.id }} .joruney__image {width: 100%;height: 100%;}
    #shopify-section-{{ section.id }} .partitioner:before {width: 25%;transform: translate(8%, -50%);}
    #shopify-section-{{ section.id }} .partitioner:after {width: 25%;transform: translate(-8%, -50%);}
  }
{% endstyle %}
<script>
  $(document).ready(function() {
    $('.embrace_journey').slick({
      slidesToShow: 5,
      slidesToScroll: 5,
      infinite: false,
      autoplay: false,
      autoplaySpeed: 5000,
      dots: false,
      arrows: false,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 1,
            autoplay: true,
          }
        }
      ]
    })
  });
</script>