<!-- Google review -->
{% unless product.handle contains 'hair-growth-serum' %}
<section id="google-reviews" class="section-the-results" data-section-type="review">
  <div class="container">
        <p class="section-title{% if page.handle == 'all-products' %} text-center text-md-left{% endif %}">{{section.settings.Heading}}</p>
  <div class="row google-review-slide" >
      {%- for block in section.blocks -%}
        <div class="slick-item-box">
        <div class="box-item" id="block-{{ block.id }}">
        {% if block.settings.main_img != blank %}
          <img class="w-100 mb-3" src="{{ block.settings.main_img | img_url: '350x' }}" alt="Image Not Found">
          {% endif %}
          <h5>{{ block.settings.name }}</h5>
          <div class="d-flex justify-content-between">
            <p class="fw-light text-uppercase date-p">{{ block.settings.date }}</p>
            <div class="star-rating">
                            <span class="icon-star">
                                {%- for i in (1..5) -%}
                                    {%- if i > block.settings.rating -%}{%- break -%}{%- else -%}â˜…{%- endif -%}
                                {%- endfor -%}
                            </span>
                      </div>
                  </div>
          <div class="mb-3 resl-desc">{{ block.settings.desc }}</div>
          <div class="d-flex justify-content-between reslt-bttm">
            <div class="pr-3">
              <p>
                <strong class="d-block">Kit Purchased</strong>
                On complete Traya recommended plan
              </p>
            </div>
            <div style="width: 50%; text-align: right;">
              <p>
                <strong class="d-block">Used for</strong>
                {{ block.settings.used_for }}
              </p> 
            </div>
          </div>         
        </div>
      </div>
      {%- endfor -%}
    </div>
  </div>
    
</section>
{% endunless %}
 <style>
