{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign show_faq = section.settings.show_faq %}
{% assign meta_length = 0 %}
{% comment %} <div class="container faq-hair-doctors section-{{ section.id }}-padding" show_faq={{ show_faq }}>
  <h2 class="faq-hd-heading center">{{ section.settings.heading | escape }}</h2>
  <div class="accordion faq-hd" id="accordionD">
   {% for faq in article.metafields.custom.faq.value %}
      <div class="accordion-item accordion-item_{{ forloop.index }} {% if forloop.index > show_faq %}hide{% endif %}">
        <h2 class="accordion-header" id="heading-{{ forloop.index0 }}">
          <button class="accordion-button {% if forloop.index0 != 0 %}collapsed{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ forloop.index0 }}" aria-expanded="true" aria-controls="collapse-{{ forloop.index0 }}">
            {{ faq.question }}
          </button>
        </h2>
        <div id="collapse-{{ forloop.index0 }}" class="accordion-collapse {% if forloop.index0 == 0 %}show{% else %}collapse{% endif %}" aria-labelledby="heading-{{ forloop.index0 }}" data-bs-parent="#accordionD">
          <div class="accordion-body">
            {{ faq.answer | metafield_tag }}
          </div>
        </div>
      </div>
    {% assign meta_length = meta_length | plus: 1 %}
    {% endfor %}
    {% if meta_length >= show_faq %}
      <div class="loadMoreWrapper">
        <buttom class="loadMore">Show more</buttom>
      </div>  
    {% endif %}
  </div>
</div> {% endcomment %}
<div class="container faq-hair-doctors section-{{ section.id }}-padding" show_faq={{ show_faq }}>
  <h2 class="faq-hd-heading center" id="faq_hair_doctors"><strong>{{ section.settings.heading | escape }}</strong></h2>
  <div class="accordion faq-hd" id="accordionD">
   {% for block in section.blocks %}
      <div class="accordion-item accordion-item_{{ forloop.index }} {% if forloop.index > show_faq %}hide{% endif %}">
        <h2 class="accordion-header" id="heading-{{ forloop.index0 }}">
          <button class="accordion-button {% if forloop.index0 != 0 %}collapsed{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ forloop.index0 }}" aria-expanded="true" aria-controls="collapse-{{ forloop.index0 }}">
            {{ block.settings.ques }}
          </button>
        </h2>
        <div id="collapse-{{ forloop.index0 }}" class="accordion-collapse {% if forloop.index0 == 0 %}show{% else %}collapse{% endif %}" aria-labelledby="heading-{{ forloop.index0 }}" data-bs-parent="#accordionD">
          <div class="accordion-body">
            {{ block.settings.ans }}
          </div>
        </div>
      </div>
    {% assign meta_length = meta_length | plus: 1 %}
    {% endfor %}
    {% if meta_length >= show_faq %}
      <div class="loadMoreWrapper">
        <buttom class="loadMore">Show more</buttom>
      </div>  
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "faq hair doctors",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "range",
        "id": "show_faq",
        "label": "Show faq in one time",
        "default": 5,
        "min": 1,
        "max": 50
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "faq",
        "name": "faq",
        "settings": [
          {
            "type": "text",
            "id": "ques",
            "label": "Question"
          },
          {
            "type": "richtext",
            "id": "ans",
            "label": "Answer"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "faq hair doctors"
      }
    ]
  }
{% endschema %}

