      {
        "type": "Sub-Footer",
        "name": "Add Footer head",
        "settings": [
          {
            "type": "text",
            "id": "footer_heading",
            "label": "Footer Heading"
          },
          {
            "type": "text",
            "id": "footer_content",
            "label": "Footer Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "All Products",
        "category": "custom"
      }
    ]
  }
{% endschema %}

{% style %}
  .traya-kit-main-heading {
    font-size: 18px;
    font-weight: 900;
    line-height: 1.61;
    letter-spacing: normal;
  }
  .section-title.all-product:before {
    content: '';
    width: 102.7px;
    height: 8px;
    border-radius: 4px;
    top: -15px;
    left: 0;
    display: block;
    position: relative;
    margin: 0 auto;
    background: #414042;
  }
  .products-reccomndation .row {
    margin-bottom: 25px;
  }
  .product--name {
    font-size: 25px;
    font-weight: 800;
  }
  .scalp, .ayurveda-main-content {
    font-size: 22px;
    font-weight: 300;
    line-height: 1.36;
    letter-spacing: -.22px;
  }
  .products-reccomndation .product-image {
    margin-top: 30px;
  }
  .products-reccomndation li {
    list-style: inherit;
    margin-left: 20px;
  }
  @media only screen and (max-width: 991.98px) and (min-width: 768px) {
    .scalp, .ayurveda-main-content {
      font-size: 18px;
    }
    .product--name {
      font-size: 22px;
    }
    .products-reccomndation .product-image {
      margin-top: 75px;
    }
  }
  @media only screen and (max-width: 767.98px) and (min-width: 576px) {
    .scalp, .ayurveda-main-content {
      font-size: 16px;
    }
    .products-reccomndation .product-image {
      margin-top: 70px;
    }
    .product--name {
      font-size: 22px;
    }
  }
  @media only screen and (max-width: 575.98px) {
    .scalp, .ayurveda-main-content {
      font-size: 14px;
    }
    .products-reccomndation .product-image {
      margin-top: 75px;
    }
    .product--name {
      font-size: 20px;
    }
  }
{% endstyle %}