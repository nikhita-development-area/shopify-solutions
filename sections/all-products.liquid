<div class="container">
  <div class="traya-kit">
  {% for block in section.blocks %}
    {% if block.type == 'Main' %}
      <p class="text-uppercase text-center traya-kit-main-heading">{{ section.settings.Heading }}</p>
    {% endif %}
  {% endfor %}
  </div>

  <div class="products-reccomndation">
    {% for block in section.blocks %}
      {% if block.type == 'Sub-header' %}
        <p class="section-title all-product pt-5">{{ block.settings.main_heading }}</p>
        <div class="row">
          <div class="col-sm-9">
            <p class="ayurveda-main-content position-relative pb-4 main-content">{{ block.settings.main_content }}</p>
          </div>
          <div class="col-sm-3"> </div>
        </div>
      {% endif %}
    {% endfor %}
      
    {% for block in section.blocks %}
      {% if block.type == 'Product-content' %}
      <div class="row" id="scalpOil">
        <div class="col-9 main-content position-relative">
          <p class="product--name">{{ block.settings.head_Text_1}}</p>
          <div class="scalp">
            <p>{{ block.settings.head_Text_2}}<br>
              {% if block.settings.herbs_content != blank %}
                <span class="font-weight-bold">Herbs :</span> {{ block.settings.herbs_content}}
              {% endif %}
            </p>
            {% if block.settings.Essential != blank %}
              <p><span class="font-weight-bold">Essential oils :</span> {{ block.settings.Essential}}</p>
            {% endif %}
            {% if block.settings.Ingredients != blank %}
              <p><span class="font-weight-bold">Ingredients :</span>{{ block.settings.Ingredients}}</p>
            {% endif %}
            <div class="row">
              <div class="col-md-6 har-ol">
                <ul>
                  {% if block.settings.li_1 != blank %}
                  <li>{{ block.settings.li_1}}</li>
                  {% endif %}
                  {% if block.settings.li_2 != blank %}
                  <li> {{ block.settings.li_2}}</li>
                  {% endif %}
                  {% if block.settings.li_3 != blank %}
                  <li>{{ block.settings.li_3}}</li>
                  {% endif %}
                  {% if block.settings.li_4 != blank %}
                  <li>{{ block.settings.li_4}} </li>
                  {% endif %}
                  {% if block.settings.li_5 != blank %}
                  <li>{{ block.settings.li_5}} </li>
                  {% endif %}
                </ul>
              </div>
              {% if block.settings.Dosage != blank %}
                <div class="col-md-6"><span class="font-weight-bold">Dosage</span> &nbsp;{{ block.settings.Dosage}}</div>
              {% endif %}
              <div class="col-md-12 mt-4">
                {% if block.settings.button_link_url != blank and block.settings.btn_text != blank %}
                  <a href="{{ block.settings.button_link_url }}" class="btn btn-dark">{{ block.settings.btn_text }}</a>
                {% endif %}
              </div>
            </div>
            <div class="line-text"></div>
          </div>
        </div>
        <div class="col-3">
          {% if block.settings.pattern_img != blank %}
            <img class="product-image" src="{{ block.settings.pattern_img | img_url: ' '}}" alt="Bottles_Scalp_Oil">
          {% endif %}
        </div>
      </div>
      {% endif %}
    {% endfor %}
  
    {% for block in section.blocks %}
      {% if block.type == 'Sub-Footer' %}
        {% if block.settings.footer_heading != blank %}
          <p class="section-title all-product pt-5">{{ block.settings.footer_heading }}</p>
        {% endif %}
        <div class="row">
          {% if block.settings.footer_content != blank %}
            <div class="col-sm-9">
              <p class="ayurveda-main-content pb-4">{{ block.settings.footer_content }}</p>
            </div>
          {% endif %}
            <div class="col-sm-3"> </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

