<!-- section/banner-hair-doctors.liquid -->
<div class="hair-doctors-banner-wrapper">
  <div class="content p-md-3  text-center">
    {% if blog.title == "hair-doctors" or blog.title == "dermatologist" %}
    <h1 class="font-weight-bold faq-hd-heading l-0">{{ section.settings.heading | escape }}</h1>
    {% endif %}
    <p class="banner_text l-0">{{ section.settings.para }}</p>
  {% comment %}  <a href="{{ section.settings.btn_url }}" id="hairtestcta" class="assessment-btn btn-dark d-lg-inline-block font-weight-bold px-3 py-2 rounded-lg hair-form-actn-link">{{ section.settings.button }}</a>{% endcomment %}
  </div>
  <div class="position-relative banner-hd">
    {% if section.settings.traya_logo != blank %}
      <img class="position-absolute rotation_logo d-none d-md-block" src="{{ section.settings.traya_logo | image_url }}" height="" width="" loading="lazy" alt="image" title="image">
    {% endif %}
    {% comment %}
    <p class="position-absolute rotation_text {% if blog.handle == "hair-doctors" %}d-none d-md-block{% endif %}" style="font-size:6px; color: #414042;
"> *as per internal study conducted on 304 people</p>
  {% endcomment %}
      <div class="inner_content  position-absolute">
        <h2 class="l-0" style="font-weight:800;">{{ section.settings.heading_sec }}</h2>
        <p class="banner_text l-0" id="hair_doctors_banner">{{ section.settings.para_sec |replace:'%s',length }}</p>
        {% if section.settings.button and section.settings.btn_url != blank %}
        <a href="{{ section.settings.btn_url }}" id="hairtestctablogd1" class="assessment-btn btn-dark d-lg-inline-block font-weight-bold px-3 py-2 px-md-5 py-md-3 rounded-lg hair-form-actn-link">{{ section.settings.button }}</a>
        {% endif %}
      </div> 
    {% if  section.settings.image != blank %}
     <img class="image d-none w-100 d-md-block" src="{{ section.settings.image | image_url }}" height="" width="" loading="lazy" alt="image" title="image">
    {% endif %}
    {% if section.settings.image_mob != blank %}
     <img class="image_mob w-100 d-block d-md-none" src="{{ section.settings.image_mob | image_url }}" height="" width="" loading="lazy" alt="image" title="image">
    {% endif %}
  </div>

  <p class="container mt-md-4">{{ section.settings.content }}</p>
</div>
