{% style %}
  {% for block in section.blocks %}
    .author-{{ block.id }} {
        font-size:{{block.settings.heading_font_size}}px;
        font-weight:{{block.settings.heading_font_weight}}px;
    }
  {% endfor %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .image-content-block--card {
      width: 20%;
    }
  }
  .image-content-block--container {
    background: #E8EEEFD6;
  }
  .image-content-block--card {
    width: 50%;
    margin-right: 10px;
  } 
  .image-content-card--wrapper {
    padding: 10px;
    padding-bottom: 70px;
    width: 100%;
    box-shadow: none;
    overflow: hidden;
    position: relative;
  }
  .section-heading.banner__heading {
    font-family: Roboto;
    font-size: 36px;
    font-weight: 400;
    line-height: 54px;
    letter-spacing: 0.5px;
    text-align: center;
  }  
  .image-content--image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .image-content--image {
    width: 80px;
    height: 80px;
    margin: 0 auto;
  }
  .flickity-prev-next-button.previous {
    left: 46%;
  }
  .flickity-prev-next-button.next {
    right: 47.5%;
  }
{% endstyle %}

<div class="page-width image-content-block--container">
    <div class="image-content-block--wrapper section-{{ section.id }}-padding">
        <div class="section-heading banner__heading">
            <h2 class="h1">{{ section.settings.heading }}</h2>
        </div>
        <div class="image-content-card--wrapper" data-flickity='{ "cellAlign": "left", "contain": true, "wrapAround":true, "pageDots":true }'>
            {% for block in section.blocks %}
                <div class="image-content-block--card">
                    <div class="image-content--image center">
                        {% if block.settings.image_block != blank %}
                            {% render 'image',
                                mobileSrc: block.settings.image_block,
                                desktopSrc: block.settings.image_block
                            %}
                        {% endif %}
                    </div>
                    {% if block.settings.block_title != blank %}
                        <div class="image-content--itle center author-{{ block.id }}">
                            <h5>{{ block.settings.block_title }}</h5>
                        </div>
                    {% endif %}
                    {% if block.settings.sub_text != blank %}
                        <div class="image-content--content center">
                          {{ block.settings.sub_text }}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% schema %}
{
  "name": "Image content blocks",
  "class": "image-content-blocks",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "<h2>What You'll Need?</h2>"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Testimonial",
      "type": "testimonial-content",
      "settings": [
        {
          "type": "header",
          "content": "Image Setting"
        },
        {
          "type": "image_picker",
          "id": "image_block",
          "label": "Image"
        },
        {
            "type": "text",
            "id": "block_title",
            "label": "Block Title"
        },
        {
            "type": "text",
            "id": "sub_text",
            "label": "Description"        },
        {
          "type": "range",
          "id": "heading_font_size",
          "min": 12,
          "max": 100,
          "step": 1,
          "label": "Font size",
          "default": 16
        },
        {
          "type": "range",
          "id": "heading_font_weight",
          "min": 300,
          "max": 800,
          "step": 50,
          "label": "Font size",
          "default": 400
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image content blocks"
    }
  ]
}
{% endschema %}