{% stylesheet %}
    .traya_3x_box {
      text-align: center;
      background: #FFFFFF;
      border: 1px solid #B7D340;
      box-shadow: 5px 10px 20px 9px rgba(0, 0, 0, 0.13);
      border-radius: 10px;
  }
  .traya_3X_image {
      display: flex;
      text-align: center;
      justify-content: space-evenly;
      color: #B7D340;
      align-items: center;
  }
  .traya_3X_image .nutrition {
      color: #B7D340;
  }
  .traya_3X_formula {
      display: flex;
      text-align: center;
      justify-content: space-evenly;
      padding: 30px 50px;
  }
  .our_approach {
      font-size: 30px;
      line-height: 39px;
  }
  .formula {
      font-size: 45px;
      line-height: 85px;
      text-align: center;
      color: #3e3e3e;
  }
  .nutrition {
      font-style: normal;
      font-weight: 600;
      font-size: 30px;
      line-height: 19px;
  }
  .holistic {
      font-style: normal;
      font-weight: 400;
      font-size: 20px;
      line-height: 19px;
      padding-top: 25px;
  }
  .traya_3X_formula:before {
      content: " ";
      width: 70%;
      height: 1px;
      top: 0%;
      left: 50%;
      display: block;
      position: absolute;
      background: #000;
      opacity: 0.1;
      transform: translateX(-50%);
  }
  .female-result .image2{
    width: 90px;
    height: 90px;
  }
  @media screen and (max-width: 767px) {
      .formula {
          font-size: 24px;
          line-height: 26px;
      }
      .nutrition {
          font-size: 12px;
      }
      .our_approach {
          font-size: 12px;
          line-height: 19px;
      }
      .traya_3X_formula {
          padding: 30px 20px;
      }
      .image2,.female-result .image2 {
          width: 45px;
          height: 45px;
      }
      .holistic {
          font-weight: 400;
          font-size: 12px;
          line-height: 13px;
          padding-top: 15px;
      }
      .image1 {
          width: 60px;
          height: 55px;
      }
      .image2 {
          width: 45px;
          height: 45px;
      }
      .image_box+svg {
          width: 20px;
          height: 20px;
      }
  }
    @media only screen and (max-width: 400px) {
      .image1 {
        width: 40px;
        height: 45px;
      }
      .image_box+svg {
        width: 15px;
        height: 15px;
      }
      .our_approach {
        font-size: 10px;
      }
    }
  .col-md-12.mt-4.mt-md-5.position-relative.mb-3.mb-md-5{
    padding:15px;
  }
{% endstylesheet %}