<div class="container">
  {% if section.settings.regrowth_heading != blank %}
  <div class="regrowth_main_heading">
    <p class="regroth_heading text-center font-weight-bold">{{ section.settings.regrowth_heading }}</p>
  </div>
  {% endif %}
  <div class="hair_identify position-relative">
    {% for block in section.blocks %}
      {% if block.settings.transplant_identify1 != blank and block.settings.transplant_identify2 != blank %}
        <div class="Scalp_Analysis transplant_thank_you-block-{{forloop.index}} position-absolute">
         <p class="font-weight-bold">{{ block.settings.transplant_identify1 }}</p>
         <p> {{ block.settings.transplant_identify2 }}</p>
        </div>
      {% endif %}     
    {% endfor %}
      <img src="{{ section.settings.transplant_bg1 | img_url: '' }}" width="100%" class="d-none d-md-block">
      <img src="{{ section.settings.transplant_bg2 | img_url: '' }}" width="100%" class="d-md-none">
  </div>
</div>
{% schema %}
  {
    "name": "Transplant Re-Growth",
    "settings": [
      {
        "type": "text",
        "id": "regrowth_heading",
        "label": "Enter Heading"
      },
      {
        "type": "image_picker",
        "id": "transplant_bg1",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "transplant_bg2",
        "label": "Mobile Image"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Re Growth Text",
        "settings": [
          {
            "type": "text",
            "id": "transplant_identify1",
            "label": "Text Heaidng"
          },
          {
            "type": "text",
            "id": "transplant_identify2",
            "label": "Text Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Transplant Re-Growth Journey",
        "category": "custom"
      }
    ]
  }
{% endschema %}

