{% style %}
  {% if page.handle == 'homev5' %}
  .caption h5{
    font-size:20px;
    color: #bf8c6a!important;
  }
  p.sub-heading{
    margin-bottom:20px!important;
  }
  h4.headening {
    font-size: 24px;
  }
    {% endif %}
  .solution-section p .animate>span {
	display: none;
  }
  .solution-section p .animate>span.active {
	display: block;
  }
  .solution-section p .animate {
    height: auto;
    display: inline-block;
/*     overflow: hidden; */
    vertical-align: top;
    position: relative;
  }
  .solution-section .img-section .caption h5 {
    position: absolute;
    width: 170px;
  }
  .solution-section .container {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }
  .doctor_bottom_text {
    font-weight: 700;
    font-size: 24px;
  }
   {% if page.handle == 'homev5' %}
  span.text-green.animate {
    color: #bf8c6a!important;
}
     {% endif %}
  @media only screen and (max-width: 767px) {
    .solution-section .container {
      position: static;
      transform: none;
    }
    .solution-section .section-title {
      margin-bottom: 15px;
      padding-top: 10px;
    }
    .doctor_bottom_text {
      font-weight: 400;
      font-size: 20px;
    }
    .solution-section .img-section .caption h5 {
      width: 120px;
      font-size: 12px;
    }
    .solution-section .img-section .caption h5:nth-child(2) {
      bottom: 18%;
      left: 3%;
    }
    .solution-section .img-section .caption h5:nth-child(3) {
      bottom: 3%;
      left: 7%;
      width: 90px;
    }
  }
  @media only screen and (max-width: 575.98px) {
    .solution-section .container {
      padding-top: 0;
      padding-bottom: 0;
    }
  }
{% endstyle %}

<script async>
      if(jQuery('.animate').length > 0 ){
        jQuery('.animate > span:first-child').addClass('active');
        var select_el = jQuery('.animate > span');
        setInterval(function(){
          if(select_el.hasClass('active')){
            jQuery('.animate > span.active').removeClass('active').next().addClass('active');
          }
          if(jQuery('.animate > span:last-child').hasClass('active')){
            jQuery('.animate > span:last-child').removeClass('active');
            jQuery('.animate > span:first-child').addClass('active');
          }
        }, 1000);
      }
      
    </script>