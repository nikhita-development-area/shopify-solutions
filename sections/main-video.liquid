<div class=" native-bg-image position-relative min__section main-videosection">
    <div id="videoid" class="page-width">
      <div class="videopadding text-center">
      {% if section.settings.videourl != blank %}
        <div class="native-video">
          <video width="100%" height="auto" class="vid rounded-lg text-center main-native-videoimg" poster="{{ section.settings.coach_image_desktop | img_url:'' }}" >
          <source src="{{ section.settings.videourl }}" type="video/mp4">
          </video>
          <i id="btn" class="fa fa-play fa-5x"></i>
        </div>
      {% endif %}
      </div>
  </div>
</div>


