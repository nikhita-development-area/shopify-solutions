<script>var playPause = document.getElementById('videoid');
  var playPause1 = document.getElementById('btn');
var vid = document.querySelector('.vid');

playPause.addEventListener('click', function(e) {
      e.preventDefault();
      if (!vid.paused) {
        vid.pause();
      } else {
        vid.play();
      }
      playPause1.classList.toggle('fa-play');
      playPause1.classList.toggle('fa-pause');
      return false;
    }, false);</script>
    
    <script>
      
      var playPauses = document.getElementById('btns');
var vids = document.querySelector('.vids');

playPauses.addEventListener('click', function(e) {
      e.preventDefault();
      if (!vids.paused) {
        vids.pause();
      } else {
        vids.play();
      }
      playPauses.classList.toggle('fa-play');
      playPauses.classList.toggle('fa-pause');
      return false;
    }, false);</script>
