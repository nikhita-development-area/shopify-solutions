        "type": "text",
        "id": "press_journey_title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "press_journey_sub_title",
        "label": "Sub-Title"
      },
      {
        "type": "image_picker",
        "id": "press_journey_img_d",
        "label": "Select Image"
      },
      {
        "type": "image_picker",
        "id": "press_journey_img_m",
        "label": "Select Image"
      },
      {
        "type": "html",
        "id": "journey_first_year",
        "label": "Journey First Year"
      },
      {
        "type": "html",
        "id": "journey_second_year",
        "label": "Journey Second Year"
      },
      {
        "type": "html",
        "id": "journey_third_year",
        "label": "Journey Third Year"
      }
    ],
    "blocks": [
      {
        "type": "Gallery",
        "name": "Gallery",
        "settings": [
          {
            "type": "image_picker",
            "id": "press_journey_logo",
            "label": "Select Logo"
          },
          {
            "type": "html",
            "id": "press_journey_content",
            "label": "Content"
          },
          {
            "type": "url",
            "id": "press_journey_url",
            "label": "url"
          } 
        ]
      }
    ],
    "presets": [{"name": "Traya Press Journey"}]
  }
{% endschema %}