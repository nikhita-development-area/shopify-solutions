<!-- Sections -> traya-press-journey.liquid -->

<div class="container mt-3 traya-press-journey mb-md-5 mb-4">
  <h2 class="traya-press-journey-title font-weight-bold">{{ section.settings.press_journey_title }}</h2>
  <p class="traya-press-journey-sub-title">{{ section.settings.press_journey_sub_title }}</p>

  <div class="press-journey">
    <div class="journey-year position-relative">
      <div class="first-year text-center">{{ section.settings.journey_first_year }}</div>
      <div class="text-center">
        <img src="{{ section.settings.press_journey_img_d | img_url: 'master' }}" class="d-none d-md-block mx-auto" alt="Press Journey Image" height="auto" width="auto" />
        <img src="{{ section.settings.press_journey_img_m | img_url: 'master' }}" class="d-md-none mx-auto" alt="Press Journey Image" height="auto" width="auto" />
      </div>
      <div class="second-year text-center position-absolute">{{ section.settings.journey_second_year }}</div>
      <div class="third-year text-center mt-2 mt-md-0">{{ section.settings.journey_third_year }}</div>
    </div>
    
    <div class="journey-logo-bar">
      {% for block in section.blocks %}
        <a href="{{ block.settings.press_journey_url }}" class="text-decoration-none" target="_blank">
          <div class="journey-logo-content d-flex align-items-center">
            <div class="journey-logo">
              <img src="{{ block.settings.press_journey_logo | img_url: 'master' }}" alt="Press Journey Logo" height="auto" width="auto" />
            </div>
            <div class="journey-content">
              <p class="text_Fredoka">{{ block.settings.press_journey_content }}</p>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% style %}
  .traya-press-journey-title {font-size: 32px; line-height: 36px; letter-spacing: 0px;}
  .traya-press-journey-sub-title {font-size: 20px; line-height: 24px; letter-spacing: 0px; color: #7C7C7C;}
  .press-journey {display: grid; grid-template-columns: 1fr 2fr;}
  .first-year strong, .second-year strong, .third-year strong {font-size: 29px; font-weight: 800; line-height: 40px; letter-spacing: 0px;}
  .first-year p, .second-year p, .third-year p {font-size: 21px; font-style: italic; line-height: 28px; letter-spacing: 0px; width: 170px; margin: auto;}
  .second-year {top: 58%; left: 50%; transform: translate(-50%, -50%);}
  .journey-logo-bar {margin-top: 90px;}
  .journey-logo-content {gap: 20px; margin-top: 3rem;}
  /* .journey-logo-content:first-child {margin: 0;} */
  .journey-logo {flex: 1;}
  .journey-content {flex: 6;}
  .journey-content p {font-size: 28px; line-height: 34px; letter-spacing: 0px;}
  
  @media only screen and (max-width: 767.98px) {
    .traya-press-journey-title {font-size: 24px; line-height: 28px;}
    .traya-press-journey-sub-title {font-size: 16px; line-height: 20px;}
    .first-year strong, .second-year strong, .third-year strong {font-size: 14px; line-height: 20px;}
    .first-year p, .second-year p, .third-year p {font-size: 10px; line-height: 14px; width: 90px;}
    .second-year {top: 51%; left: 50%; transform: translate(-50%, -50%);}
    .journey-logo-bar {margin-top: 70px;}
    .journey-content {flex: 3;}
    .journey-content p {font-size: 12px; line-height: 15px;}
  }

  @media only screen and (max-width: 450px) {.second-year {top: 58%;}}
{% endstyle %}

