<!-- Sections -> cuticle-women.liquid -->

<div class="container cuticle-women">
  <h2 class="text-center font-weight-bold mb-3">{{ section.settings.cuticle_women_title }}</h2>

  <div class="women-content">
    {% for block in section.blocks %}
      <div class="women-img-txt mx-md-4 mx-2">
        {% if block.settings.women_img != blank %}
          <img src="{{ block.settings.women_img | img_url: 'master' }}" alt="Women Images" title="Image {{ forloop.index }}" width="" height="" loading="lazy" />
          <p class="text-center">{{ block.settings.women_txt }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .cuticle-women h2 {font-size: 48px; line-height: 65px; letter-spacing: 0em;}
  .women-img-txt img {box-shadow: 0px 7.222222328186035px 7.222222328186035px 0px #00000040; border-radius: 18px; margin-bottom: 20px;}
  .women-img-txt p {font-size: 23px; line-height: 30px;}
  .cuticle-women .slick-dots li.slick-active button:before {color: #9E83D7;}

  @media screen and (max-width: 768px) {
    .cuticle-women h2 {font-size: 30px; line-height: 40px;}
    .women-img-txt img {box-shadow: 0px 4px 4px 0px #00000040; border-radius: 10px;}
    .women-img-txt p {font-size: 13px; line-height: 16px;}
  }
</style>

<script>
  jQuery(document).ready(function($) {
    $('.women-content').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 3000,
      arrows: false,
      dots: false,
      infinite: true,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 2.5,
            dots: true
          }
        }
      ]
    });
  });
</script>

{% schema %}
  {
    "name": "Cuticle Women",
    "settings": [
      {
        "type": "html",
        "id": "cuticle_women_title",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "name": "Cuticle Gallery",
        "type": "Gallery",
        "settings": [
          {
            "type": "image_picker",
            "id": "women_img",
            "label": "Select Image"
          },
          {
            "type": "html",
            "id": "women_txt",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [{"name": "Cuticle Women"}]
  }
{% endschema %}