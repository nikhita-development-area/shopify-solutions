{% if template == 'index.login' %}
  {% assign page__hndl = 'home' %}
{% elsif template == 'index' %}
  {% assign page__hndl = 'home' %}
{% else %}
  {% assign page__hndl = page.handle %}
{% endif %}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
  <div class="page-width custom-santulan_slide section-{{ section.id }}-padding">
    <div class="collection__title title-wrapper title-wrapper--no-top-margin page-width mb-0">
      <h2 class="section-title title h0 text-center">{{ section.settings.Heading }}</h2>
    </div>
 <div class="row santulan_range_slid_grid">
   {% for block in section.blocks %}
    <div class="santulan_fe_img">
        <img class="santulan_slide_desk" src="{{ block.settings.Image | img_url: 'master' }}" alt="Products Slide">
        <img class="santulan_slide_mob" src="{{ block.settings.mobile_Image | img_url: 'master' }}" alt="Products Slide">
<!--           <a href="{{ block.settings.link }}"> 
      </a> -->
     </div>
  {% endfor %}
  </div>
    <div class="text-center">
      <a id="{% if page.handle == 'post-pregnancy' %}female-hair-test-button4 {% else %}female-hair-test-button5{% endif %}" href="https://form.traya.health/?santulan=1&location=HowTrayaHelps&page={{ page__hndl }}" class="btn btn-dark my-3 shadow hair-form-actn-link">Take The Hair Test <sup>TM</sup></a>
    </div>
    
  </div>

  <style>
  .santulan_fe_img img {
    margin: 0 auto;
}
    @media screen and (max-width: 749px) {
       .santulan_slide_mob{
         display:block !important;
       }
      .santulan_slide_desk{
         display:none !important;
       }
      .custom-santulan_slide{
        display:block;
      }
    }
     @media screen and (min-width: 750px) {
      .santulan_slide_mob{
         display:none !important;
       }
      .santulan_slide_desk{
         display:block !important;
       }
       .custom-santulan_slide{
         display:block;
       }
     }
  </style>
{% schema %}
  {
    "name": "Santulan Slide",
    "settings": [
      {
            "type":"text",
            "label" :"heading",
            "id" :"Heading"
         },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],  
    "blocks": [
     {
       "name": "ThreeStep",
       "type": "text",
       "settings": [
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type":"image_picker",
            "label" :"Image",
            "id" :"Image"
         },
        {
            "type":"image_picker",
            "label" :"Mobile Image",
            "id" :"mobile_Image"
         }
       
       ]
}    
      
 ],
      "presets": [
    {
      "name": "Santulan Slide"
    }
  ]
  }
{% endschema %}