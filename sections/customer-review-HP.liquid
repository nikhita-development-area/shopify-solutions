<div class="customer_reviews_slider container cstm-home-page">
  <h2 class="section-title">{{ section.settings.customer-head }}</h2>
  <div class="customer_reviews_container">
  {% for block in section.blocks %}
  <div class="customers_review_content">
   <div class="custr_images gap-2 justify-content-center">
      <div class="img-txt">
         <img src="{{ block.settings.customer_img1 | img_url:'' }}">
         <p class="text-center">{{ block.settings.customer_txt1 }}</p>
      </div>
      <div class="img-txt">
         <img src="{{ block.settings.customer_img2 | img_url:'' }}">
         <p class="text-center">{{ block.settings.customer_txt2 }}</p>
      </div>
      <div class="img-txt">
         <img src="{{ block.settings.customer_img3 | img_url:'' }}">
         <p class="text-center">{{ block.settings.customer_txt3 }}</p>
      </div>
    </div>
    <div class="custr_content">
      <div class="name_and_verified my-2 l-0">
        <span><strong>{{ block.settings.customer_name }}</strong></span>
        <span style="color: #B7D340;">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M14.3733 7.16003L13.4667 6.10667C13.2933 5.90667 13.1533 5.53333 13.1533 5.26667V4.13333C13.1533 3.42667 12.5733 2.84667 11.8667 2.84667H10.7333C10.4733 2.84667 10.0933 2.70667 9.89334 2.53333L8.84 1.62667C8.38 1.23333 7.62667 1.23333 7.16 1.62667L6.11334 2.54C5.91334 2.70667 5.53334 2.84667 5.27334 2.84667H4.12C3.41334 2.84667 2.83334 3.42667 2.83334 4.13333V5.27333C2.83334 5.53333 2.69334 5.90667 2.52667 6.10667L1.62667 7.16669C1.24 7.62669 1.24 8.37336 1.62667 8.83336L2.52667 9.89336C2.69334 10.0934 2.83334 10.4667 2.83334 10.7267V11.8667C2.83334 12.5734 3.41334 13.1534 4.12 13.1534H5.27334C5.53334 13.1534 5.91334 13.2934 6.11334 13.4667L7.16667 14.3734C7.62667 14.7667 8.38 14.7667 8.84667 14.3734L9.9 13.4667C10.1 13.2934 10.4733 13.1534 10.74 13.1534H11.8733C12.58 13.1534 13.16 12.5734 13.16 11.8667V10.7334C13.16 10.4734 13.3 10.0934 13.4733 9.89336L14.38 8.84003C14.7667 8.38003 14.7667 7.62003 14.3733 7.16003ZM10.7733 6.74003L7.55334 9.96003C7.46 10.0534 7.33334 10.1067 7.2 10.1067C7.06667 10.1067 6.94 10.0534 6.84667 9.96003L5.23334 8.34669C5.04 8.15336 5.04 7.83336 5.23334 7.64003C5.42667 7.44669 5.74667 7.44669 5.94 7.64003L7.2 8.90003L10.0667 6.03333C10.26 5.84 10.58 5.84 10.7733 6.03333C10.9667 6.22667 10.9667 6.54667 10.7733 6.74003Z" fill="#B7D340"/>
        </svg>
          Verified review
        </span>
    </div>
      <div class="rattings_ mb-2 d-flex align-items-center">
       <img src="{{ block.settings.stars | img_url:'' }}">   
        <span class="pl-2">{{ block.settings.star_value }}</span>
      </div>
      <p class="reviewed_on my-2 mb-0">Reviewed on {{ block.settings.review_date }}</p>
      <span class="review_details l-0 fullReview webkit-box">{{ block.settings.review_details }}  <span class="com_reco_pln my-2 l-0">On complete Traya recommended plan.</span></span>
      <span class="show_less_more" style="text-decoration: underline;"><b class="toggleText" style="cursor: pointer;" >read more</b></span>         
    </div>
  </div>
  {% endfor %}
 </div>
</div>
            
{% schema %}
  {
    "name": "Reviews home page",
    "settings": [
      {
        "type": "text",
        "id": "customer-head",
        "label": "Enter your heading"
      }
    ],
    "blocks":[
      {
        "name":"reviews slider",
        "type":"revies",
        "settings":[
          {
            "type":"text",
            "id":"customer_name",
            "label":"Customer Name"
          },
          {
            "type":"image_picker",
            "id":"customer_img1",
            "label":"Select Image"
          },
          {
            "type":"text",
            "id":"customer_txt1",
            "label":"enter the month1"
          },
          {
            "type":"image_picker",
            "id":"customer_img2",
            "label":"Select Image"
          },
          {
            "type":"text",
            "id":"customer_txt2",
            "label":"enter the month2"
          },
          {
            "type":"image_picker",
            "id":"customer_img3",
            "label":"Select Image"
          },
          {
            "type":"text",
            "id":"customer_txt3",
            "label":"enter the month3"
          },
          {
            "type":"text",
            "id":"review_date",
            "label":"Review Date"
          },
          {
            "type":"text",
            "id":"review_details",
            "label":"Review Content"
          },
          {
            "type":"image_picker",
            "id":"stars",
            "label":"Add Star"
          },
          {
            "type":"text",
            "id":"star_value",
            "label":"Add Star Value"
          }
        ]
      }
    ],
    "presets":[
      {
      "name":"reviews home page"
      }
    ]
  }
{% endschema %}
