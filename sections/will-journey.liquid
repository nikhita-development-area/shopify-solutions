<!-- Sections -> will-journey.liquid -->

<div class="container will-journey my-3 my-md-5">
  <h3 class="will-journey-title font-weight-bold text-center mb-4">{{ section.settings.doctors_title }}</h3>
  <div class="will-journey-gallery">
    {% for block in section.blocks %}
      <div class="will-journey-data d-flex align-items-center m-2">
        <div class="will-journey-img">
          <img src ="{{ block.settings.journey_img | img_url: '64x64' }}" alt="Journey-{{ forloop.index }}" title="Journey{{ forloop.index }}" height="64" width="64" />
        </div>

        <div class="will-journey-content">
          <p>{{ block.settings.journey_steps }}</p>
          <h4 class="font-weight-bold">{{ block.settings.journey_title }}</h4>
          <p>{{ block.settings.journey_content }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .will-journey-title {font-size: 44px; line-height: 32px; letter-spacing: 0em;}
  .will-journey-data {box-shadow: 1px 2px 4px 2px #0000001A; border-radius: 8px; gap: 10px; padding: 10px;}
  .will-journey-content h4 {font-size: 15px; line-height: 20px; letter-spacing: 0.22918352484703064px;}
  .will-journey-content p {font-size: 11px; line-height: 14px; letter-spacing: 0.22918352484703064px; margin: 5px 0; color: #727272;}
  .will-journey-content img {height: 15px;}

  @media screen and (max-width: 767.98px) {
    .will-journey-title {font-size: 30px; line-height: 30px;}
    .will-journey-gallery .slick-dots li button:before {display: none;}
    .will-journey-gallery .slick-dots li button {background: #0000004D; height: 2px; width: 6px; border-radius: 50px;}
    .will-journey-gallery .slick-dots li.slick-active button {background: #00000099; width: 20px;}
  }
</style>

<script>
  $(document).ready(function(){
    $('.will-journey-gallery').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      autoplay: false,
      autoplaySpeed: 3000,
      dots: false,
      arrows: false,
      infinite: false,
      responsive: [
        {
          breakpoint: 1025,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 426,
          settings: {
            slidesToShow: 1.02,
            slidesToScroll: 1,
            dots: true,
          }
        }
      ]      
    });
  });
</script>

{% schema %}
  {
    "name": "Will Journey",
    "settings": [
      {
        "type": "text",
        "id": "doctors_title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "Gallery",
        "name": "Journey Gallery",
        "settings": [
          {
            "type": "image_picker",
            "id": "journey_img",
            "label": "Select Image"
          },
          {
            "type": "text",
            "id": "journey_steps",
            "label": "Steps"
          },
          {
            "type": "text",
            "id": "journey_title",
            "label": "Title"
          },
          {
            "type": "html",
            "id": "journey_content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [{"name": "Will Journey"}]
  }
{% endschema %}