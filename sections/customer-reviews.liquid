{% if template == 'index.login' %}
  {% assign page__hndl = 'home' %}
{% elsif template == 'index' %}
  {% assign page__hndl = 'home' %}
{% else %}
  {% assign page__hndl = page.handle %}
{% endif %}

<div class="{{page.handle}} cust_reviews{% unless template.name =='index' or page.handle == 'result4' or page.handle == 'result4c' or page.handle == 'result4-a' or page.handle == 'result4b' or page.handle == 'all' %}{% unless template.suffix == 'resultco' or page.handle == 'result' %} mb-5{% endunless %}{% endunless %}" page_type="normal">
<div class="container">
    {%- if section.settings.title != '' -%}
    <p class="{% if page.handle == 'femalev2' or page.handle == 'female' or page.handle == 'femalev1' %} femalev2 {% endif %} {% if page.handle == 'female-result' %}font-fredoka fw-bold {% endif %}section-title">{{ section.settings.title }}</p>
    {%- endif -%}
        {%- if page.handle == 'new-female' -%}
        <h5 class="section-sub-title">Discover why so many women trust Traya for hair fall</h5>
          {%- endif -%}
        {%- if page.handle == 'native' -%}
        <h5 class="native-subitle-review section-sub-title">With Traya’s 3x Formula<sup>TM</sup></h5>
  {%- endif -%}
      
          {%- if page.handle == 'femalev2' or page.handle == 'female' or page.handle == 'femalev1' or page.handle == 'female-result' -%}
        <h5 class="femalev2 native-subitle-review section-sub-title">Discover why so many women <br>trust Traya for  hair fall</h5>
        {%- endif -%}
        {% if page.handle == 'all' %} 
                <div class="row justify-content-center mb-4">
                <button id="showM" class="men_button font-fredoka border rounded-lg btn_active col-3 col-md-2 mx-2 py-md-2">Men</button>
                <button id="showF" class="women_button font-fredoka border rounded-lg col-3 col-md-2 mx-2 py-md-2">Women</button>
                </div>
        {% endif %}
      
    <div class="customer-review-slider {% if page.handle == 'native' %}native-dots{% endif %}">
      {%- for block in section.blocks -%}

      <div class="pt-2 px-3 pb-3 slider-div {% unless page.handle == 'result-hi' or page.handle == 'result4c' or page.handle == 'result4' or page.handle == 'result4-a' or page.handle == 'result4b' %} {% if page.handle == 'all' %}pb-md-4 {% elsif template.suffix == 'resultco' %} pb-md-2{% else %} pb-md-5{% endif %}{% if block.settings.gender == 'M' %} review-resultco-M{% else %} review-resultco-F{% endif %}{% endunless %}">
        <div class="card border-0 {% unless page.handle == 'all' %}shadow {% endunless %} rounded-lg p-4">
          <div class="our-customers-img"> 
            <div class="row mx-n2 mx-md-n3 pl-md-5 pr-md-5 justify-content-sm-between justify-content-center">
              {% for i in (1..4) %}
              {% capture icon %}icon_{{ i }}{% endcapture %}
              {% capture month %}month_title_{{ i }}{% endcapture %}
              {% if block.settings[month] != '' %}
              <div class="main-customers col-6 px-2 px-md-4 col-md-3">
                {% if block.settings[icon] != blank %}
                <img class="lazyload" data-src="{{ block.settings[icon] | img_url: '300x' | prepend: 'https:' }}" alt="{{ block.settings[icon] | escape }}">
                {% endif %}
                <p class="font-weight-bold text-center mt-2 mt-md-3">{{ block.settings[month] }}</p>
              </div>
              {% endif %}
              {% endfor %}
            </div>
          </div>
          <div class="customers-item text-center">
            {% assign content_size = block.settings.content | size %}
            <h2 class="font-weight-bold l-0 mt-3">{{ block.settings.name }}</h2>
            <div class="d-flex justify-content-center">
              <span class="pr-2">{% render 'result-icons', icon: 'verified-review-icon' %}</span>
              <span class="l-0 pb-2" sytle="color: #414042; font-size: 12px;">Verified Review</span>
            </div>
            <img loading="lazy" src="//cdn.shopify.com/s/files/1/0100/1622/7394/files/new-home-page_180x.png" alt="new-home-page" class="rwview-star mx-auto" title="Review" width="180" height="32"/>
            <span class="review-date pl-3 text-grey">{% unless page.handle == 'all' %} Reviewed on {% endunless %}{{ block.settings.review_on }}</span>
            <p class="customers-review m-auto addReadMore showlesscontent font-weight-normal text-center py-2 w-100 px-md-3">“{{ block.settings.content }}”</p>
            <div class="row justify-content-between align-items-center mt-3 {% if page.handle == 'all' %}d-none{% endif %}">
              <div class="col-5 col-md-4 col-lg-2 text-left traya__used_for">
                <p class="m-0 font-weight-bold">Used for</p>
                <p class="text-grey">{{ block.settings.used_for }}</p>
              </div>
              <div class="col-7 col-lg-4 col-md-5 text-right">
                <p class="m-0 font-weight-bold traya__recommended">On complete Traya recommended plan.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      {% endfor %}
    </div>

 </div>
  {% if page.handle != 'all' %}
    {% if section.settings.sub_title != '' %}
    <h5 class="text-center mb-3 mt-3 sub_titile_heading">{{ section.settings.sub_title }}</h5>
    {% endif %}
  {% endif %}
{% unless page.handle == 'result4' or page.handle == 'result4c' or page.handle != 'result4-a' or page.handle != 'result4b' %}
  {% if section.settings.btn_text != blank and section.settings.btn_link != blank %}
  <div class="text-center mb-3">
  <a id="{% if page.handle == 'female' or page.handle == 'new-female' %}female-hair-test-button5{% elsif page.handle == 'femalev1' %}femalev1-hair-test-button6{% else %}hairtestcta{% endif %}" href="{{ section.settings.btn_link }}&page={{ page__hndl }}" class="start-journey-btn btn btn-dark my-3 shadow hair-form-actn-link">{{ section.settings.btn_text }} <sup>&trade;</sup></a>
  </div>
  {% endif %}
{% endunless %}
</div>

{% if page.handle == 'result4' or page.handle == 'result4-a' or page.handle == 'result4b' or page.handle == 'result5'%}
<style>
  .slick-items-container-result:not(.slick-initialized) .review-resultco-M~.review-resultco-M, .review-resultco-F{
    display:none;
  } 
</style>
{% endif %}
{% style %}
   p.femalev2.section-title {
    margin-bottom: 30px!important;
}
  h5.femalev2.native-subitle-review.section-sub-title {
    margin-bottom: 15px;
    font-weight: 100 !important;
}
    .female.mb-5s, .femalev1.mb-5s{
    text-align:center;
      margin:0 0 48px 0;
  }
  .female .female.mb-5 .section-title, .femalev1 .femalev1.mb-5 .section-title, .female-result .female.mb-5 .section-title{
    margin-bottom:10px !important;
  }
   .female .female mb-5s .section-title-main, .femalev1 .femalev1 mb-5s .section-title-main{
     font-size: 18px;
    font-weight: 400!important;
   }
  .female .female mb-5s h5.text-center, .femalev1 .femalev1 mb-5s h5.text-center{
    font-size:20px;
  }
/*   .customer-review-slider .review-resultco-F{display:none;} */
    {% if page.handle == 'all' %}
  .men_button, .women_button{
    color:#CBCBCB;
        background: transparent;
}
  .btn_active{
    color:#000;
    border-width: 1px 1px 4px !important;
    border-bottom-color: #B7D340 !important;
  }
  .container_hide{
    display:none !important;
  }
    .container_show{
    display:block !important;
  }
    {% endif %}
  .our-customers-img img{    
    object-fit: cover;
    width: auto;
    height: 180px;
    margin: 0 auto;
  }
  .main-customers p{ 
    font-size: 16px;
  }
  .customers-item h2 { 
    font-size: 32px;
  }
  .review-date, .traya__recommended, .traya__used_for p {
    font-size: 16px;
    letter-spacing: normal;
  }
  .customers-review, .homev5 .heading{
    font-size: 20px;
  }
  @media screen and (max-width: 767px) {
     h5.femalev2.native-subitle-review.section-sub-title, .female-result .native-subitle-review {
    font-size: 18px;
}
      .our-customers-img img{    
    width: auto;
    height: 110px;
  }
  .main-customers p{ 
    font-size: 15px;
  }
  .customers-item h2 { 
    font-size: 24px;
  }
  .review-date, .traya__recommended. traya__used_for p {
    font-size: 14px;
  }
  .customers-review {
    font-size: 16px;
    line-height: 1.3;
  }
  }
  {% if page.handle == 'all' %}
    .template-page.all .customer-review-slider .card {
      background: #FFF;
      filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
    }
  {% endif %}
  {% if page.handle == 'female' or page.handle == 'new-female'%}
    .section-title-main {
      letter-spacing: normal;
    }
  {% endif %}
  .customer-review-slider:not(.slick-initialized) > .slider-div:first-of-type ~ * {
    display: none;
  }
{% endstyle %}

{% schema %}
{
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
	{
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Review",
      "settings": [
		{
          "type": "text",
          "id": "name",
          "label": "Customer Name"
        },
		 {
        "type": "select",
        "id": "gender",
        "label": "Gender",
        "options":[
			{
           "label": "Male",
		   "value": "M"
            },
            {
			 "label": "Female",
		   "value": "F"
            }
		  ],
		  "default": "M"
        },
		{
          "type": "text",
          "id": "used_for",
          "label": "How Long Used Product"
        },
		{
          "type": "text",
          "id": "review_on",
          "label": "Provided Review On"
        },
		{
          "type": "text",
          "id": "kit_purchased",
          "label": "Kit Purchased"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "header",
          "content": "Month 1"
        },
		{
          "type": "image_picker",
          "id": "icon_1",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "month_title_1",
          "label": "Month"
        },
        {
          "type": "header",
          "content": "Month 2"
        },
		{
          "type": "image_picker",
          "id": "icon_2",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "month_title_2",
          "label": "Month"
        },
        {
          "type": "header",
          "content": "Month 3"
        },
		{
          "type": "image_picker",
          "id": "icon_3",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "month_title_3",
          "label": "Month"
        },
        {
          "type": "header",
          "content": "Month 4"
        },
		{
          "type": "image_picker",
          "id": "icon_4",
          "label": "Image"
        },
		{
          "type": "text",
          "id": "month_title_4",
          "label": "Month"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Reviews"
    }
  ]
}
{% endschema %}
 {% if page.handle != 'all' %}
<script>
  $(document).ready(function(){
  $(".customer-review-slider").slick({ infinite: !0, slidesToShow: 1, slidesToScroll: 1, dots: !1, arrows: !0, autoplay: true, responsive: [{ breakpoint: 767, settings: { slidesToShow: 1,  arrows: !1, slidesToScroll: 1 } }] });
  $(".customer-review-slider .review-resultco-F").addClass("container_hide");
  $("#showM").click(function(){
    $(".customer-review-slider .review-resultco-F").removeClass("container_show");
  $(".customer-review-slider .review-resultco-M").addClass("container_show");
  $(".customer-review-slider .review-resultco-F").addClass("container_hide");
  $(".men_button").addClass("btn_active");
  $(".women_button").removeClass("btn_active");
  $('.customer-review-slider').slick('unslick');
  $('.customer-review-slider').slick({
    slide: '.review-resultco-M',
    infinite: false,
    slidesToShow: 1,
    slidesToScroll: 1,
    dots: false,
    autoplay: true,
    arrows: true,
    swipe : true,
    adaptiveHeight: false
  });
  });
  $("#showF").click(function(){
  $(".customer-review-slider .review-resultco-M").removeClass("container_show");
  $(".customer-review-slider .review-resultco-F").addClass("container_show");
  $(".customer-review-slider .review-resultco-M").addClass("container_hide");
  $(".women_button").addClass("btn_active");
  $(".men_button").removeClass("btn_active");
  $('.customer-review-slider').slick('unslick');
  $('.customer-review-slider').slick({
    slide: '.review-resultco-F',
    infinite: false,
    slidesToShow: 1,
    slidesToScroll: 1,
    dots: false,
    autoplay: true,
    arrows: true,
    swipe : true,
    adaptiveHeight: false
  });
  });
  });
</script>
{% else %}
  <script>
   $(document).ready(function(){
     {% if page.handle == 'native'  %}
   $(".customer-review-slider.native-dots").slick({ infinite: !0, slidesToShow: 1, slidesToScroll: 1, dots: !1, arrows: !0, autoplay: true, responsive: [{ breakpoint: 767, settings: { slidesToShow: 1,  arrows: !1, slidesToScroll: 1 } }] });
     {% else %}
        $(".customer-review-slider").slick({ infinite: !0, slidesToShow: 1, slidesToScroll: 1, dots: !1, arrows: !0, autoplay: true, responsive: [{ breakpoint: 767, settings: { slidesToShow: 1,  arrows: !1, slidesToScroll: 1 } }] });
     {% endif %}
   });
 </script>
{% endif %}