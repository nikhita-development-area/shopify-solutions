{% include 'hotm-home'%}

<div class="section-trending pb-0 hero-page-trending-section position-relative">
  <div class="container">
<!--     <p class="section-title font-weight-bold l-0 text-center mb-4">Our Trending Heros</p> -->
    <div class="row trending_hero">
    {% for block in section.blocks %}
       {% if block.type == 'text' %}
       <div class="col-md-3 text-center mb-5 mb-md-0">
        <img src="{{ block.settings.hero_img | img_url: '200x' }}" class="px-4 d-none d-md-block m-auto">
        <img src="{{ block.settings.hero_img | img_url: '200x' }}" class="px-0 d-block d-md-none m-auto">
        <h4 class="mt-3 mt-md-2{% if page.handle == 'customer-stories' %} heros{% endif %}">{{ block.settings.hero_name }}, {{ block.settings.hero_age }}</h4>
        <p class="{% if page.handle == 'customer-stories' %}heros-para{% endif %}">{{ block.settings.hero_address }}</p>
      </div>
      {% endif %}
    {% endfor %}
    </div>
  </div>
</div>

<section class="monthly-hero pt-2{% if page.handle == 'customer-stories' %} pt-md-0 pb-4 {% else %} pt-md-5 {% endif %}position-relative">
  
  <div class="container">
    <p class="section-title font-weight-bold text-center mb-4 mb-md-5">{{section.settings.heading}}</p>
    <div class="row month-hero-div">
      <div class="col-md-11 col-lg-9 mx-auto hero_content_slids" style="z-index: 1;">
        
        {% for block in section.blocks %}
        {% if block.type == 'columns' %}
        <div class="card pb-4 pt-4 pt-md-5 px-3 px-md-5{% unless page.handle == 'customer-stories' %} shadow{% endunless %} text-center mb-5{% if page.handle == 'customer-stories' %} hero-border mt-0 mt-md-2{% endif %}" {% if page.handle == 'customer-stories' %}style="border-color: #A9B699;" {% else %}style="border-color: {{ block.settings.color }};"{% endif %}>
          <h2 class="font-weight-bold h1 l-0 mb-4{% if page.handle == 'customer-stories' %} d-none{% endif %}">{{ block.settings.heading }}</h2>
          {% if page.handle == 'customer-stories' %}<div class="d-none"><h3 class="font-weight-bold h2 l-0 mt-5" style="color: #000;  font-size: 25px !important;">{{ block.settings.hero-info }}</h3>
          <h4 class="text-center">{{ block.settings.hero-address }}</h4></div>
          {% endif %}
          <div class="d-flex{% if page.handle == 'customer-stories' %} justify-content-center hero-image mb-0 mb-md-4{% else %} justify-content-center mb-4{% endif %}">
            <div><img src="{{ block.settings.image_1 | img_url: '300x' }}" alt="{{ block.settings.image_1 | escape }}" class="mx-2 mx-md-3">
              {% unless page.handle != 'customer-stories' %}<p class="monthname text-center font-fredoka mt-3{% if page.handle == 'customer-stories' %} mb-2{% endif %}" style="color: #A9B699;">{{ block.settings.month-text1 }}</p>{% endunless %}
            </div>
          	{% if page.handle == 'customer-stories' %}<div class="d-none"><h3 class="font-weight-bold h2 l-0 mt-5" style="color: #000;">{{ block.settings.hero-info }}</h3>
            <h4 class="text-center">{{ block.settings.hero-address }}</h4></div>
            {% endif %}
            <div><img src="{{ block.settings.image_2 | img_url: '300x' }}" alt="{{ block.settings.image_2 | escape }}" class="mx-2 mx-md-3">
              {% unless page.handle != 'customer-stories' %}<p class="monthname text-center font-fredoka mt-3{% if page.handle == 'customer-stories' %} mb-2{% endif %}" style="color: #A9B699;">{{ block.settings.month-text2 }}</p>{% endunless %}
            </div>
          </div>
          {% unless page.handle == 'customer-stories' %}
          <h3 class="font-weight-bold h2 l-0">{{ block.settings.name }}</h3>{% endunless %}
          {% if page.handle == 'customer-stories' %}
          <div class="card-text"><p>{{ block.settings.description }}</p></div>
          {% else %}
          <div class="font-size-18">{{ block.settings.desc }}</div>
          {% endif %}
          {% if page.handle == 'customer-stories' %}
          <span class="badge-icon logo d-none"><img alt="{{ 'logo.png' | escape }}" data-src="{{ 'logo.png' | asset_img_url: '' }}" class="lazyload">
            {% if block.settings.hero-image != blank %}
            <span><img src="{{ block.settings.hero-image | img_url: '300x' }}" alt="{{ block.settings.hero-image | escape }}" class="hero-image"></span>{% endif %}
          </span>
          {% else %}
          <span class="badge-icon"><img src="{{ block.settings.badge | img_url: '300x' }}" alt="{{ block.settings.badge | escape }}"></span>
          {% endif %}
        </div>
            {% endif %}
        {% endfor %}
      </div>
      
    </div>
    <div class="text-center mt-0 mt-md-4">
      <a href="/pages/reviews" id="myBtn" class="trending-view-more-btn">View more</a>
    </div>
   
    
  </div>
</section>

