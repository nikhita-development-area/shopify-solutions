<script>
  
$(document).ready(function(){
  $('.hero_content_slids').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    autoplay: false,
    dots: false,
    infinite: true,
    arrows: false,
    asNavFor: '.trending_hero',
    adaptiveHeight: true
  });
  $('.trending_hero').slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    autoplay: false,
    dots: false,
    centerMode: true,
    centerPadding: '100px',
    infinite: true,
    arrows: true,
    focusOnSelect: true, 
    asNavFor: '.hero_content_slids',
    responsive: [
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
          infinite: true,
          centerMode: true,
          centerPadding: '2px'
        }
      }
    ]
  });

});
</script>

{% style %}
  .trending_hero .slick-list .slick-slide.slick-current.slick-active.slick-center{
    transform: scale(1.4);
  }
  .trending_hero .slick-list {
    padding-top: 5rem !important;
    padding-bottom: 5rem !important;
  }
  .trending_hero .slick-list .slick-slide img{
    filter: blur(1px);
  }
  .trending_hero .slick-list .slick-slide.slick-current.slick-active.slick-center img{
    vertical-align: middle;
    border-style: none;
    outline: 3px solid #A9B699;
    outline-offset: -6px;
    filter: unset;
  }
  
  .trending_hero .slick-list .slick-slide.slick-current.slick-active img{
    border-radius: 50% !important;
    padding: 0 !important;
    -webkit-border-radius: 50% !important;
    -moz-border-radius: 50% !important;
  }
  .trending_hero .slick-list .slick-slide.slick-current.slick-active.slick-center h4, .trending_hero .slick-list .slick-slide.slick-current.slick-active.slick-center p {
    font-weight: 600;
  }
  @media only screen and (max-width: 767px) {
    .trending_hero .slick-list {
      padding-top: 4rem !important;
      padding-bottom: unset !important;
    }
    .trending_hero .heros, .trending_hero .heros-para{
      font-size: 13px;
      line-height: 18px;
    }
    #shopify-section-home-section-google-reviews .google-review.slick-initialized .box-item.border-hero {
      min-height: inherit;
    }
    .hero_content_slids .card{
      margin-bottom: 3rem !important;
    }
          .template-page.customer-stories .trending_hero .slick-next{
      right: 0px;
      }
    .template-page.customer-stories .trending_hero .slick-prev{
    left: 5px;
}
  }
  {% if page.handle == 'customer-stories' %}
    .monthly-hero .hero-border {
      border: 3px solid;
      border-radius: 16px;
      box-shadow: 0 0 10px #00000078;
      min-height: 470px;
    }
    .monthly-hero .monthname {
      font-size: 28px;
    }
    .monthly-hero .card-text p {
      font-size: 22px;
      line-height: 38px;
      font-weight: 600;
    }
    .monthly-hero .trending-view-more-btn {
      cursor: pointer;
      border: 1.5px solid #58595B;
      background: #d9d9d903;
      border-radius: 9px;
      font-size: 22px;
      line-height: 30px;
      padding: 10px 20px;
      box-shadow: 0 4px 8px #00000040;
      font-weight: 400;
      text-decoration: none;
    }
    @media only screen and (max-width: 1199.98px) and (min-width: 768px) {
      .monthly-hero .hero-border {
        min-height: 500px;
      }
	
    }
    @media only screen and (max-width: 767.98px) and (min-width: 576px) {
      .monthly-hero .hero-border {
        min-height: 450px;
      }
      .monthly-hero .card-text p {
        font-size: 20px;
        line-height: 35px;
      }
      .monthly-hero .trending-view-more-btn {
        font-size: 18px;
        padding: 5px 10px;
      }
    }
    @media only screen and (max-width: 575.98px) {
      .monthly-hero .hero-border {
        min-height: 320px;
      }
      .monthly-hero .card-text p {
        font-size: 13px;
        line-height: 16px;
      }
      .monthly-hero .trending-view-more-btn {
        font-size: 18px;
        padding: 5px 10px;
      }
    }
  {% endif %}
{% endstyle %}