    ],
     "blocks": [
    {
      "type": "Banner",
      "name": "Banner",
      "settings": [
    {
       "type":"image_picker",
       "id":"image_desktop",
       "label":"Image For Desktop" 
      },
      {
        "type":"image_picker",
        "id":"image_mob",
        "label":"Image For Mobile"
      },
      {
        "type":"html",
        "id":"title",
        "label":"Heading"
      },
      {
        "type":"text",
        "id":"paragraph_img",
        "label":"Paragraph"
      },
      {
        "type":"text",
        "id":"btn_text",
