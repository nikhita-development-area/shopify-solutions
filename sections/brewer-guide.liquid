{% style %}
  {% for block in section.blocks %}
    .author-{{ block.id }} {
        font-size:{{block.settings.heading_font_size}}px;
        font-weight:{{block.settings.heading_font_weight}}px;
    }
  {% endfor %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    position: relative;
  }
  .brewer-guide--card {
    width: 100%;
    margin-right: 10px;
    display: flex;
    flex-direction: column;
    align-items: baseline;
  } 
  .brewer-guide-card--wrapper {
    padding: 10px;
    padding-bottom: 100px;
    width: 100%;
    box-shadow: none;
    overflow: hidden;
    position: relative;
  }
  .brewer-guide-card--wrapper .flickity-prev-next-button{
    bottom: 1%;
  }
  button.brewer-guide-content {
    width: max-content;
    height: 34px;
    padding: 5px 25px 5px 25px;
    border-radius: 30px;
    background: #C36767;
    font-family: Roboto;
    font-size: 16px;
    font-style: italic;
    color: #EBF0FF;
    border: none;
  }
  .section-heading.banner__heading {
    font-family: Roboto;
    font-size: 36px;
    font-weight: 400;
    line-height: 54px;
    letter-spacing: 0.5px;
    text-align: center;
  }  
  .brewer-guide-content-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .brewer-guide-content-image {
    width: auto;
    height: auto;
    margin: 0 auto;
  }
  .brewer-guide-content-title h5 {
    height: 95px;
    padding: 0 20px;
    font-family: Roboto;
    font-size: 20px;
    font-weight: 400;
    line-height: 25px;
    letter-spacing: 0.3px;
    text-align: left;
    color: #98352F;
  }
  .brewer-guide-button--container {
    padding-left: 20px;
  }
  .brewer-guide-top--block{
    background: #E8EEEFD6;
    padding-top: 15px;
  }
  .brewer-guide-card--wrapper .flickity-prev-next-button.previous {
    left: 52%;
  }
  .brewer-guide-card--wrapper .flickity-prev-next-button.next {
    right: 52%;
  }
  .brewer-guide-card--wrapper .flickity-page-dots {
    left: 35%;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .brewer-guide--card {
      width: 24.37%;
    }
    .brewer-guide-card--wrapper .flickity-page-dots{
      left: 47%;
    }
    .brewer-guide-card--wrapper .flickity-prev-next-button.previous {
      left: 48%;
    }
    .brewer-guide-card--wrapper .flickity-prev-next-button.next {
      right: 45.8%;
    }
  }
{% endstyle %}

<div class="page-width brewer-guide--container">
    <div class="brewer-guide--wrapper section-{{ section.id }}-padding">
        <div class="section-heading banner__heading">
            <h2 class="h1">{{ section.settings.heading }}</h2>
        </div>
        <div class="brewer-guide-card--wrapper" data-flickity='{ "cellAlign": "left", "contain": true, "wrapAround":true, "pageDots":true }'>
            {% for block in section.blocks %}
                <div class="brewer-guide--card">
                    {% if block.settings.block_title != blank %}
                        <div class="brewer-guide-top--block">
                            <div class="brewer-guide-button--container">
                                <button class="brewer-guide-content center">
                                    Step {{ forloop.index }}
                                </button>
                            </div>
                            <div class="brewer-guide-content-title center author-{{ block.id }}">
                                <h5>{{ block.settings.block_title }}</h5>
                            </div>
                        </div>
                    {% endif %}
                    <div class="brewer-guide-content-image center">
                        {% if block.settings.image_block != blank %}
                            {% render 'image',
                                mobileSrc: block.settings.image_block,
                                desktopSrc: block.settings.image_block
                            %}
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% schema %}
{
  "name": "Brewer guide",
  "class": "brewer-guide",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "<h2>What You'll Need?</h2>"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Testimonial",
      "type": "testimonial-content",
      "settings": [
        {
          "type": "header",
          "content": "Image Setting"
        },
        {
          "type": "image_picker",
          "id": "image_block",
          "label": "Image"
        },
        {
            "type": "text",
            "id": "block_title",
            "label": "Block Title"
        },
        {
          "type": "range",
          "id": "heading_font_size",
          "min": 12,
          "max": 100,
          "step": 1,
          "label": "Font size",
          "default": 16
        },
        {
          "type": "range",
          "id": "heading_font_weight",
          "min": 300,
          "max": 800,
          "step": 50,
          "label": "Font size",
          "default": 400
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brewer guide"
    }
  ]
}
{% endschema %}