{% if template == 'index.login' %}
  {% assign page__hndl = 'home' %}
{% elsif template == 'index' %}
  {% assign page__hndl = 'home' %}
{% else %}
  {% assign page__hndl = page.handle %}
{% endif %}

<div class="container section-{{ section.id }}-padding">
    <div class="pb-3">
      {% if section.settings.heading != blank %}
        <p class="text-center why_it_happens_heading d-none d-md-block m-0">{{ section.settings.heading }}</p>
      {% endif %}
      {% if section.settings.mobile_heading != blank %}
        <p class="text-center why_it_happens_heading d-md-none m-0">{{ section.settings.mobile_heading }}</p>
      {% endif %}
    </div>
  {% if section.blocks.size != 0 %}
    <div class="d-flex flex-wrap align-items-start mb-0 why_haapens_causes_wrapper">
      {%- for block in section.blocks -%}
        <div class="mx-2 col-12 rounded-lg d-flex flex-wrap justify-content-center pb-md-3 why_happen_cause_wrap" style="background: {{ block.settings.background_color }};">
          {% if block.settings.image != blank %}
          <div class="cause_image_wrapper col-12">
            {%- assign width = block.settings.image.width | divided_by: 2 -%}
            {%- assign height = block.settings.image.height | divided_by: 2 -%}
            {%- assign alt = block.settings.image.alt | default: 'Icon' -%}
            {{ block.settings.image | image_url: width: 250 | image_tag: width: width, height: height, alt: alt, title: alt, loading: 'lazy', class: 'm-auto d-block cause_image' }}
          </div>
          {% endif %}
          <div class="col-md-11 pt-3 text_area">
            {% if block.settings.cause_name != blank %}<p class="m-0 pb-md-5 pb-4 text-center cause_name position-relative">{{ block.settings.cause_name }}</p>{% endif %}
            {% if block.settings.cause_description != blank %}<div class="pb-md-4 pb-3"><p class="m-0 px-4 py-2 text-center cause_description text-white font-weight-bold">{{ block.settings.cause_description }}</p></div>{% endif %}
            {% if block.settings.how_happens != blank %}<p class="m-0 pb-md-4 pb-2 text-center font-weight-bold how_happens">{{ block.settings.how_happens }}</p>{% endif %}
            {% if block.settings.how_happens_description != blank %}<p class="m-0 pb-md-3 pb-2 text-center how_happens_description">{{ block.settings.how_happens_description }}</p>{% endif %}
            {% if block.settings.signs != blank %}<p class="m-0 pb-md-4 pb-2 text-center signs font-weight-bold">{{ block.settings.signs }}</p>{% endif %}
            {% if block.settings.sign_description != blank %}<p class="m-0 pb-md-3 pb-3 text-center sign_description">{{ block.settings.sign_description }}</p>{% endif %}
          </div>
        </div>
      {%- endfor -%}
    </div>

    <!-- Slick Total No. of Slide & Current Slide No. -->
    <div class="slider-info1 font-weight-bold text-center" style="font-size: 16px; color: #C4695B;">
      <span class="current-slide1">1</span>/<span class="total-slides1"></span>
    </div>
    <!-- Slick Total No. of Slide & Current Slide No. -->
  
  {% endif %}
  {% if section.settings.btn_text != blank and section.settings.btn_url != blank %}
    <div class="text-center pt-4">
      <a href="{{ section.settings.btn_url }}&page={{ page__hndl }}" id="hairtestcta" class="why_happens_btn btn btn-dark">{{ section.settings.btn_text }}</a>
    </div>
  {% endif %}
</div>

{% schema %}
