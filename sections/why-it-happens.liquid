    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "Section Settings"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Enter Desktop Heading",
        "info": "Desktop Heading"
      },
      {
        "type": "text",
        "id": "mobile_heading",
        "label": "Enter Mobile Heading",
        "info": "Mobile Heading"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Enter Button Text",
        "info": "Button Text"
      },
      {
        "type": "url",
        "id": "btn_url",
        "label": "Enter Button Url",
        "info": "Button Url"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
