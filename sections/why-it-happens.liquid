{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  #shopify-section-{{ section.id }} .why_happen_cause_wrap {margin-top: 5rem;}
  #shopify-section-{{ section.id }} .cause_image_wrapper {height:80px;}
  #shopify-section-{{ section.id }} .text_area {min-height: 530px;}
  #shopify-section-{{ section.id }} .cause_image {position: relative;top: -100%;}
  #shopify-section-{{ section.id }} .why_it_happens_heading {font-size: 48px;line-height: 65.47px;font-weight: 800;}
  #shopify-section-{{ section.id }} .cause_name {font-size: 32px;line-height: 37.92px;font-weight: 800;color: #C4695B;}
  #shopify-section-{{ section.id }} .cause_name:before {content: '';position: absolute;top: 70%;left: 50%;transform: translate(-50%, -25%);width: 35%;height: 3px;background: #C4695B;}
  #shopify-section-{{ section.id }} .cause_description {font-size: 20px;line-height: 22px;background: #E49A8F;border-radius: 5px;}
  #shopify-section-{{ section.id }} .how_happens, #shopify-section-{{ section.id }} .signs {font-size: 30px;line-height: 40.5px;}
  #shopify-section-{{ section.id }} .how_happens_description, #shopify-section-{{ section.id }} .sign_description {font-size: 20px;line-height: 30px;font-weight: 300;}
  .why_haapens_causes_wrapper:not(.slick-initialized) > .why_happen_cause_wrap:first-of-type ~* {display: none !important;}
  #shopify-section-{{ section.id }} .why_haapens_causes_wrapper .slick-dots li.slick-active button:before {color: #C4695B;}
  #shopify-section-{{ section.id }} .why_haapens_causes_wrapper .slick-dots li button:before {color: #D9D9D9;opacity: 1;}
  #shopify-section-{{ section.id }} .why_happens_btn {background: #C4695B;border: 1px solid #C4695B;}
  
  .why_haapens_causes_wrapper .slick-dots {position: relative; top: 30px;} /* Slick Total No. of Slide & Current Slide No. */
  .slider-info1 {position: relative; bottom: 30px;} /* Slick Total No. of Slide & Current Slide No. */
  
  @media only screen and (max-width: 991.98px) and (min-width: 768px) {
    #shopify-section-{{ section.id }} .why_it_happens_heading {font-size: 40px;line-height: 55.47px;}
    #shopify-section-{{ section.id }} .cause_image_wrapper {height:60px;}
    #shopify-section-{{ section.id }} .text_area {min-height: 560px;}
    #shopify-section-{{ section.id }} .cause_image {width: 120px;height: 120px;}
    #shopify-section-{{ section.id }} .why_happen_cause_wrap {margin-top: 4rem;}
    #shopify-section-{{ section.id }} .cause_name {font-size: 26px;line-height: 30.92px;}
    #shopify-section-{{ section.id }} .cause_description {font-size: 16px;line-height: 20px;}
    #shopify-section-{{ section.id }} .how_happens, #shopify-section-{{ section.id }} .signs {font-size: 24px;line-height: 34.5px;}
    #shopify-section-{{ section.id }} .how_happens_description, #shopify-section-{{ section.id }} .sign_description {font-size: 16px;line-height: 26px;}
  }
  @media only screen and (max-width: 767.98px) {
    #shopify-section-{{ section.id }} .why_it_happens_heading {font-size: 20px;line-height: 27.28px;}
    #shopify-section-{{ section.id }} .why_happen_cause_wrap {margin-top: 3rem;}
    #shopify-section-{{ section.id }} .text_area {min-height: 505px;}
    #shopify-section-{{ section.id }} .cause_image_wrapper {height:50px;}
    #shopify-section-{{ section.id }} .cause_image {width: 100px;height: 100px;}
    #shopify-section-{{ section.id }} .cause_name {font-size: 16px;line-height: 18.96px;}
    #shopify-section-{{ section.id }} .cause_description {font-size: 14px;line-height: 20px;}
    #shopify-section-{{ section.id }} .how_happens, #shopify-section-{{ section.id }} .signs {font-size: 14px;line-height: 18.9px;}
    #shopify-section-{{ section.id }} .how_happens_description, #shopify-section-{{ section.id }} .sign_description {font-size: 12px;line-height: 18px;}
  }
{% endstyle %}

