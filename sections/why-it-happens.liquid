        "label": "t:sections.all.padding.padding_bottom",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "why_happens",
        "name": "Why Happens",
        "settings": [
          {
            "type": "color",
            "id": "background_color",
            "label": "Select Background Color",
            "info": "Background Color",
            "default": "#fff"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image",
            "info": "Image"
          },
          {
            "type": "text",
            "id": "cause_name",
            "label": "Enter Cause Name",
            "info": "Cause Name"
          },
          {
            "type": "text",
            "id": "cause_description",
            "label": "Enter Cause Description",
            "info": "Cause Description"
          },
          {
            "type": "text",
            "id": "how_happens",
            "label": "Enter Happens Cause",
            "info": "Happens Cause",
            "default": "How does it happen?"
          },
          {
            "type": "text",
            "id": "how_happens_description",
            "label": "Enter Happens Cause Description",
