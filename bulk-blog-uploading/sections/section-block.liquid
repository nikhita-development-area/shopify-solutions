<style>
  .section-{{ section.id }}-padding {
     margin-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
     margin-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
       margin-top: {{ section.settings.padding_top }}px;
       margin-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>
  
<div class="block-test--container page-width section-{{ section.id }}-padding">
  <div class="block-test--wrapper">
    {% for block in section.blocks %}
      <div class="block-test--block">
        <div class="block-test-image--container">
          <img class="block-test-background--image" src="{{ block.settings.desktop-image | img_url }}" loading="lazy" width="100%" height="100%">
        </div>
        <div class="block-test-content--conatiner">
          <h1 class="block-test--heading banner__heading h0">
            {{ block.settings.heading }}
          </h1>
          <p class="block-test--subheading banner__text body">
            {{ block.settings.sub-heading }}
          </p>
          <div class="block-test--flex">
            <button class="block-test--button">
              <a href="{{ block.settings.button_link }}" class="block-test-button--link">
                {{ block.settings.button-text }}
              </a>
            </button>
            <p class="block-test--caption">
              {% if block.settings.paragraph != blank %}
                From <span class="price-style">{{ block.settings.paragraph }}</span>
              {% endif %}
            </p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% style %}
  h1.block-test--heading.banner__heading.h0 {
    font-size: 28px;
  }
  p.block-test--subheading.banner__text.body {
    font-size: 1.5rem;
  }
  .block-test--wrapper {
    display: flex;
    gap: 1rem;
  }
  .block-test--block:first-child {
    width: 70%;
    position: relative;
  }
  .block-test--block:last-child {
    width: 35%;
    position: relative;
  }
  .block-test--block:first-child .block-test-image--container,
  .block-test--block:last-child .block-test-image--container{
    width: 100%;
    height: 100%;
  }
  .block-test--block:first-child .block-test-content--conatiner {
    position: absolute;
    top: 0;
    padding: 10px 50px;
    width: 75%;
  }
  .block-test--block:first-child p.block-test--subheading.banner__text.body {
    width: 60%;
  }
  .block-test--flex {
    display: flex;
    align-items: center;
    gap: 2rem;
    justify-content: flex-start;
  }
  span.price-style {
    color: deepskyblue;
    font-weight: 600;
  }
  button.block-test--button {
    width: auto;
    background: #1565c0;
    padding: 0 30px;
    height: 50px;
    border: none;
    border-radius: 5px;
  }
  a.block-test-button--link {
    text-decoration: none;
    color: #fff;
    font-size: 16px;
  }
  .block-test--block:last-child .block-test-content--conatiner {
    position: absolute;
    top: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }
  .block-test--block:last-child img.block-test-background--image {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }
  .block-test--block:last-child p.block-test--subheading.banner__text.body {
    width: 70%;
    text-align: center;
  }
  img.block-test-background--image {
    border-radius: 7px;
  }
  @media screen and (max-width: 1023px) and (min-width: 680px){
     .block-test--wrapper {
      display: flex;
      gap: 1rem;
      flex-direction: column;
    }
    .block-test--wrapper .block-test--block {
      width: 100%;
    }
    img.block-test-background--image {
      border-radius: 7px;
      width: 100%;
      height: 100%;
      aspect-ratio: 2;
      object-fit: cover;
    }
  }
  @media screen and (max-width: 767px) {
    .block-test--wrapper {
      display: flex;
      gap: 1rem;
      flex-direction: column;
    }
    .block-test--wrapper .block-test--block {
      width: 100%;
    }
  }
{% endstyle %}

